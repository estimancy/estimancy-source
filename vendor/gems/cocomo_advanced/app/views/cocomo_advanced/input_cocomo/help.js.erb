$("#myModal").modal('toggle');
<% if @factor.nil? %>
  $("#content").html("Aucune aide n'est disponible pour ce facteur.")
<% else %>
    //$("#content").html("<%#=raw @help.factors %>")
    <% if current_user.language.locale.downcase == "fr" %>
        $("#content").html(" <%=raw j(@factor.send("fr_helps")) %> ")
    <% else %>
        $("#content").html(" <%=raw j(@factor.send("en_helps")) %> ")
    <% end %>
<% end %>