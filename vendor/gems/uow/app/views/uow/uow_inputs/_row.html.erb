<% @uow_inputs.each_with_index do |input, i| %>
  <tr id="myTableRow_<%= i+1 %>">
    <%= hidden_field_tag "module_project_id", params[:module_project_id] %>
    <%= hidden_field_tag "input_id[#{i+1}]", input.id, :class => "input_id" %>

    <td class="span2 center">
      <%= link_to "", uow.new_item_path(params[:module_project_id], current_component.id, i + 4), :class => "icon icon-plus", title: "New item", remote: true %>
      <%= link_to "", uow.remove_item_path(params[:module_project_id], input.id, current_component.id, i+1), :class => "icon icon-trash", title: "Remove item", remote: true %>
      <%= link_to "", "#", :class => "icon icon-question-sign", title: "Criteria", :"data-toggle" => "modal", :"data-target" => "#myModal" %>
      <span class="icon icon-star <%= input.flag.blank? ? 'black-question-mark' : input.flag %>"></span>
      <%= hidden_field_tag "flag[#{i+1}]", input.flag.blank? ? 'black-question-mark' : input.flag %>
    </td>
    <td class="span2 center">
      <%= text_field_tag "name[#{i+1}]", input.name, :class => "name input-large" %>
    </td>
    <td class="span1 center">
      <%= select_tag "technology[#{i+1}]", options_for_select(@organization_technologies, selected: input.technology_id.nil? ? current_component.organization_technology_id : input.technology_id), {class: "technology", prompt: I18n.t(:select_technology), required: true} %>
    </td>
    <td class="span1 center">
      <% input.technology_id.nil? ? (@unit_of_works = current_component.organization_technology.unit_of_works) : (@unit_of_works = input.organization_technology.unit_of_works) %>
      <%= select_tag "uow[#{i+1}]", options_for_select(@unit_of_works.map{|uow| [uow.name, uow.id]}, selected: input.unit_of_work_id.nil? ? current_component.uow_inputs.last.unit_of_work_id : input.unit_of_work_id), {class: "uow", prompt: I18n.t(:select_uow), required: true} %>
    </td>
    <td class="span1 center">
      <%# select_tag "complexity[#{i+1}]", options_for_select(@complexities, :selected => input.complexity_id ), :class => "complexity" %>
      <%= select_tag "complexity[#{i+1}]", options_for_select(OrganizationUowComplexity.where(unit_of_work_id: input.unit_of_work_id, organization_technology_id: input.technology_id).all, :selected => input.complexity_id ), :class => "complexity" %>
    </td>
    <td class="span1 center">
      <%= select_tag "size_unit_type[#{i+1}]", options_for_select(current_project.organization.size_unit_types.map{|i| [i.name, i.id]}, selected: input.size_unit_type_id) %>
    </td>
    <td class="span1 center">
      <%= text_field_tag "size_low[#{i+1}]", input.size_low, :class => "size_low compressed" %>
    </td>
    <td class="span1 center">
      <%= text_field_tag "size_most_likely[#{i+1}]", input.size_most_likely, :class => "size_most_likely compressed" %>
    </td>
    <td class="span1 center">
      <%= text_field_tag "size_high[#{i+1}]", input.size_high, :class => "size_high compressed" %>
    </td>
    <td class="span1 center">
      <%= text_field_tag "weight[#{i+1}]", input.weight.nil? ? 1 : input.weight, :class => "weight compressed" %>
    </td>
    <td class="span1 center">
      <%= text_field_tag "gross_low[#{i+1}]", input.gross_low, :class => "gross_low compressed", readonly: true %>
    </td>
    <td class="span1 center">
      <%= text_field_tag "gross_most_likely[#{i+1}]", input.gross_most_likely, :class => "gross_most_likely compressed", readonly: true %>
    </td>
    <td class="span1 center">
      <%= text_field_tag "gross_high[#{i+1}]", input.gross_high, :class => "gross_high compressed", readonly: true %>
    </td>
  </tr>
<% end %>