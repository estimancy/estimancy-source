<div class="tabs">

  <ul>
    <li>
      <a href="#tabs-1">
        Attributs
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@guw_attribute) do |f| %>
      <%= f.error_notification %>

      <%= f.input :guw_model_id, as: :hidden, input_html: { value: params[:guw_model_id] } %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description, input_html: { rows: "5"} %>
      </div>

      <%= f.button :submit %>
    <% end %>
  </div>
</div>