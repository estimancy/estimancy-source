<h4>
  <b>
    Liste des attributs (crit√®res)
  </b>
</h4>

<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">
        Attributs
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <table class="table table-bordered">
      <tr>
        <th>Nom</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @guw_attributes.each do |guw_attribute| %>
        <tr>
          <td><%= guw_attribute.name %></td>
          <td><%= guw_attribute.description %></td>
          <td class="center">
            <%= link_to '', guw.edit_guw_model_guw_attribute_path(params[:guw_model_id], guw_attribute), class: "fa fa-pencil" %>
            <% if can? :manage_modules_instances, ModuleProject %>
                <%= link_to '', guw_attribute, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<br>

<% if can? :manage_modules_instances, ModuleProject %>
    <%= link_to 'Nouvel attribut', guw.new_guw_model_guw_attribute_path(params[:guw_model_id]), class: "btn" %>
<% end %>
<%= link_to "Retour", guw.guw_model_path(params[:guw_model_id]), class: "btn" %>
