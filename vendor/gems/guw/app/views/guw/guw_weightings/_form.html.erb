<div class="tabs">

  <ul>
    <li>
      <a href="#tabs-1">
        <%= @guw_model.weightings_label %>
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@guw_weighting) do |f| %>
      <%= f.error_notification %>

      <%= f.input :guw_model_id, as: :hidden, input_html: { value: params[:guw_model_id] } %>

      <div class="form-inputs">
        <%= f.input :name, label: I18n.t(:name) %>
        <%= f.input :value, label: I18n.t(:value) %>
        <%= f.input :display_order, label: I18n.t(:display_order) %>
      </div>

      <% if can? :manage_modules_instances, ModuleProject %>
        <%= f.button :submit, I18n.t('save') %>
      <% end %>
      <%= link_to I18n.t(:back), :back, class: "btn" %>
    <% end %>
  </div>
</div>