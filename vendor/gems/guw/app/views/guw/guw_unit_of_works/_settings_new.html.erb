              <% Guw::GuwOutput.where(guw_model_id: @guw_model.id,
                                      name: @guw_model.orders.map(&:first)).each do |guw_output| %>
                <% @hash_guw_outputs[guw_output.name] = guw_output %>
              <% end %>

