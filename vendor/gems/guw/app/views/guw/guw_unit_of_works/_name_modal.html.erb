<%= form_tag guw.save_name_path, method: "post" do %>
  <div class="modal-header modal-drag">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h4 class="modal-title" id="comments_label<%= @guw_unit_of_work.id %>">
      <b>
        <%= @guw_unit_of_work.guw_type %>
      </b> - Nom de <%= @guw_unit_of_work %>
    </h4>
  </div>
  <div class="modal-body">
    <%= text_area_tag "name[#{@guw_unit_of_work.id}]", @guw_unit_of_work.name, class: "attribute_note_area form-control", readonly: !can?(:execute_estimation_plan, @project) %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal" ><%= I18n.t(:close) %></button>
    <% if can? :execute_estimation_plan, @project %>
      <button type="submit" class="btn btn-default">
        <%= I18n.t(:save) %>
      </button>
    <% end %>
  </div>
<% end %>
