<b>
  <%= I18n.t :new_unit_of_work %>
</b>

<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">
        <%= I18n.t :new_unit_of_work %>
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@guw_unit_of_work) do |f| %>
      <%= f.error_notification %>

      <%= f.input :guw_model_id, as: :hidden, input_html: { value: params[:guw_model_id] } %>

      <div class="form-inputs">

        <%= hidden_field_tag :position, params[:position] %>

        <%= f.input :name, label: "Nom de l'unitÃ© d'oeuvre" %>
        <%= f.input :comments, input_html: { rows: "5" }, label: "Description" %>
        <%= f.input :guw_type_id, as: :select, collection: @guw_model.guw_types, label: "Type d'UO", include_blank: false %>
        <%= f.input :guw_unit_of_work_group_id, as: :select, collection: current_module_project.guw_unit_of_work_groups, label: "Groupe d'UO", selected: params[:g] %>
      </div>

      <%= f.button :submit, I18n.t('save') %>
    <% end %>
  </div>
</div>