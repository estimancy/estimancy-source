<b>Unit of Work</b>
<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">
        New Unit Of Work
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@guw_unit_of_work) do |f| %>
      <%= f.error_notification %>

      <%= f.input :guw_model_id, as: :hidden, input_html: { value: params[:guw_model_id] } %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :comments, input_html: { rows: "5"} %>
        <%= f.input :guw_type_id, as: :select, collection: @guw_model.guw_types %>
        <%= f.input :guw_unit_of_work_group_id, as: :select, collection: current_module_project.guw_unit_of_work_groups %>
      </div>

      <%= f.button :submit %>
    <% end %>
  </div>
</div>