<%= simple_form_for(@guw_unit_of_work) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :comments %>
    <%= f.input :guw_type_id, as: :select, collection: Guw::GuwType.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>