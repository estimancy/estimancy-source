<%= form_tag guw.guw_unit_of_works_save_guw_unit_of_works_path do %>

  <h4>Choix du mod√®le d'UO</h4>
  <%= select_tag("guw_model_id", options_for_select(current_project.organization.guw_models.map{|i| [i.name, i.id] })) %>

  <hr>
  <div id="table_guw_model">
    <%= render partial: '/guw/guw_unit_of_works/table_guw_model' %>
  </div>

  <%= link_to "Ajouter un UO", guw.new_guw_unit_of_work_path, class: "btn btn-mini" %>
  <%= submit_tag "Sauvegarder", class: "btn btn-mini" %>
<% end %>

<script>
  $(document).ready(function(){
    $("#guw_model_id").on('change', function() {
      return $.ajax({
        url: "<%= guw.reload_path %>",
        data: {
          guw_model_id: $(this).val()
        }
      });
    });
  })
</script>