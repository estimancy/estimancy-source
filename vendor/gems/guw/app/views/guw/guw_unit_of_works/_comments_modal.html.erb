<%= form_tag guw.save_comments_path, method: "post" do %>
  <div class="modal-header">
    <h4 class="modal-title" id="comments_label<%= guow.id %>">
      <b>
        <%= guow.guw_type %>
      </b> - <%=I18n.t(:Description_and_trackings_of, parameter: guow) %> </h4>
  </div>
  <div class="modal-body">

    <label>
      <b>
        <%= I18n.t(:name) %>
      </b>
    </label>
    <%= text_area_tag "name[#{guow.id}]", guow.name, class: "attribute_note_area", readonly: !can?(:execute_estimation_plan, @project) %>

    <label>
      <b>
        <%= I18n.t(:description) %>
      </b>
    </label>
    <%= text_area_tag "comments[#{guow.id}]", guow.comments, class: "attribute_note_area", rows: 4, readonly: !can?(:execute_estimation_plan, @project) %>

    <label>
      <b>
        Traçabilité
      </b>
    </label>
    <%= text_area_tag "trackings[#{guow.id}]", guow.tracking, class: "attribute_note_area", rows: 4, readonly: !can?(:execute_estimation_plan, @project) %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal" ><%= I18n.t(:close) %></button>
    <% if can? :execute_estimation_plan, @project %>
      <button type="submit" class="btn btn-default">
        <%= I18n.t(:save) %>
      </button>
    <% end %>
  </div>
<% end %>
