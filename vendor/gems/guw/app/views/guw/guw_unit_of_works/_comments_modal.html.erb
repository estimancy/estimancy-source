<%= form_tag guw.save_comments_path, method: "post" do %>
  <div class="modal-header">
    <h4 class="modal-title" id="comments_label<%= guow.id %>">
      <b>
        <%= guow.guw_type %>
      </b> - Description de <%= guow %> </h4>
  </div>
  <div class="modal-body">
    <%= text_area_tag "comments[#{guow.id}]", guow.comments, class: "attribute_note_area", readonly: !can?(:execute_estimation_plan, @project) %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal" ><%= I18n.t(:close) %></button>
    <% if can? :execute_estimation_plan, @project %>
      <button type="submit" class="btn btn-default">
        <%= I18n.t(:save) %>
      </button>
    <% end %>
  </div>
<% end %>
