                <!--<th colspan="2">-->
                  <%# guw_coefficient.name %>
                <!--</th>-->
              <%# end %>

              <%# @guw_model.guw_outputs.each do |guw_output| %>
                <!--<th>-->
                  <%# guw_output.name %>
                <!--</th>-->
