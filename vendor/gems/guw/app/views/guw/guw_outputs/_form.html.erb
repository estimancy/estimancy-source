<section class="card card-content-bloc estimancy-form">

  <div class="card-body">
    <div class="edition-bloc-left">
      <div class="edition-bloc-title">
        <h4><%= I18n.t(:outputs) %></h4>
      </div>
    </div>

    <%= simple_form_for([@guw_model, @guw_output]) do |f| %>
      <%= f.error_notification %>
      <div class="edition-bloc-content">
        <div class="edition-bloc-form">
            <div class="col-6">

      <%= f.input :guw_model_id, as: :hidden, input_html: { value: params[:guw_model_id] } %>
      <%= f.input :organization_id, as: :hidden, input_html: { value: @guw_model.organization_id } %>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.input :name, label: false, :input_html => {:class => 'mdl-textfield__input'} %>
                  <label class="mdl-textfield__label" for="name"><%= I18n.t(:name) %></label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.input :output_type, as: :select, label: false , collection: ["Effort", "Taille", "Cout"], :input_html => {:class => 'mdl-textfield__input'} %>
                  <label class="mdl-textfield__label" for="output_type"><%= I18n.t(:output_type) %> </label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.input :unit, label: false, :input_html => {:class => 'mdl-textfield__input'} %>
                  <label class="mdl-textfield__label" for="unit"><%= I18n.t(:output_unit) %></label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.input :allow_subtotal, label: false, as: :boolean, :input_html => { :class => 'mdl-checkbox__inputs' } %>
                  <label class="mdl-textfield__label" for="allow_subtotal" style="padding-left: 20px; margin-top: -7px;"><%=  I18n.t(:allow_subtotal) %></label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.input :color_code, label: "Color Code", :input_html => {:class => 'color'} %>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.input :color_priority, label: false, :input_html => {:class => 'mdl-textfield__input'} %>
                  <label class="mdl-textfield__label" for="color_priority"><%= I18n.t(:color_priority) %> </label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.input :standard_coefficient, label: false, :input_html => {:class => 'mdl-textfield__input'} %>
                  <label class="mdl-textfield__label" for="standard_coefficient"> <%= I18n.t(:standard_conversion_coefficient_only_effort) %> </label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.input :display_order, label: false, :input_html => {:class => 'mdl-textfield__input'}  %>
                  <label class="mdl-textfield__label" for="display_order"><%= I18n.t(:calculation_order) %> </label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.input :estimation_status_id, as: :select, label: "Allowed Statuses", collection: @current_organization.estimation_statuses %>
                </div>

              </div>
            </div>

        </div>

        <div class="actions-tabs">
          <% if can? :manage_modules_instances, ModuleProject %>
            <%= f.button :submit, I18n.t('save'), class: "btn btn-primary" %>
          <% end %>
          <%= link_to I18n.t(:back), :back, class: "btn btn-secondary" %>
        </div>

    <% end %>
  </div>
</section>