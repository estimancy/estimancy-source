<div class="tabs">

  <ul>
    <li>
      <a href="#tabs-1">
        Sorties
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for([@guw_model, @guw_output]) do |f| %>
      <%= f.error_notification %>

      <%= f.input :guw_model_id, as: :hidden, input_html: { value: params[:guw_model_id] } %>

      <div class="form-inputs">
        <%= f.input :name, label: I18n.t(:name) %>
        <%= f.input :output_type, as: :select, label: "Type de Sortie", collection: ["Effort", "Taille", "Cout"] %>
        <%= f.input :unit, label: "UnitÃ© de sortie" %>
        <%= f.input :allow_subtotal, label: "Calculer les sous-totaux" %>
        <%= f.input :color_code, input_html: {class: 'color'} %>
        <%= f.input :color_priority %>
        <%= f.input :standard_coefficient, label: "Coefficient Standard de Conversion (Effort uniquement)" %>
        <%= f.input :display_order, label: "Ordre de calcul" %>
        <%= f.input :estimation_status_id, as: :select, label: "Allowed Statuses", collection: @current_organization.estimation_statuses %>

      </div>

      <div class="actions-tabs">
        <% if can? :manage_modules_instances, ModuleProject %>
          <%= f.button :submit, I18n.t('save'), class: "btn btn-primary" %>
        <% end %>
        <%= link_to I18n.t(:back), :back, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>