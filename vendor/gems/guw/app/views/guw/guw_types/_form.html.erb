<div class="tabs">

  <ul>
    <li>
      <a href="#tabs-1">
        Unit of Work
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@guw_type) do |f| %>
      <%= f.error_notification %>

      <%= f.input :guw_model_id, as: :hidden, input_html: { value: params[:guw_model_id] } %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= tinymce %>
        <%= f.input :description, input_html: { class: 'tinymce', rows: 15, cols: 20 } %>
      </div>

      <% if can? :manage_modules_instances, ModuleProject %>
        <%= f.button :submit, I18n.t('save') %>
      <% end %>
      <%= link_to I18n.t(:back), :back, class: "btn" %>
    <% end %>
  </div>
</div>