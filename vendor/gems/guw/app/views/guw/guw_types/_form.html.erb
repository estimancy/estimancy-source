<div class="tabs">

  <ul>
    <li>
      <a href="#tabs-1">
        <%= I18n.t :unit_of_work %>
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@guw_type) do |f| %>
      <%= f.error_notification %>

      <%= f.input :guw_model_id, as: :hidden, input_html: { value: params[:guw_model_id] } %>

      <div class="form-inputs">
        <%= f.input :name, label: "Type d'unité d'oeuvre" %>
        <%= tinymce %>
        <%= f.input :description, input_html: { class: 'tinymce', rows: 15, cols: 20 } %>
        <%= f.input :allow_retained, label: "Activer le retenu" %>
        <%= f.input :allow_quantity, label: "Activer la quantité" %>
        <%= f.input :allow_complexity, label: "Activer la complexité" %>
      </div>

      <% if can? :manage_modules_instances, ModuleProject %>
        <%= f.button :submit, I18n.t('save') %>
        <%= link_to "Supprimer", @guw_type, method: :delete, class: "btn pull-right" %>
      <% end %>
      <%= link_to I18n.t(:back), :back, class: "btn" %>
    <% end %>
  </div>
</div>