<section class="card card-content-bloc estimancy-form">
  <div class="mb-5">
    <div class="effort-bloc">
      <div class="card-body">

        <div class="edition-bloc-title">
          <h4>
            <a href="#tabs-1">Configuration du coefficient</a>
          </h4>
        </div>

        <div id="tabs-1">
          <div class="edition-bloc-content">
            <div class="edition-bloc-form">
              <%= simple_form_for([@guw_model, @guw_coefficient, @guw_coefficient_element]) do |f| %>
                <%= f.error_notification %>

                <%= f.input :guw_model_id, as: :hidden, input_html: { value: params[:guw_model_id] } %>
                <%= f.input :guw_coefficient_id, as: :hidden, input_html: { value: @guw_coefficient.id } %>

                <div class="form-row">
                  <div class="col-5">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <%= f.input :name, label: false, :input_html => { class: "mdl-textfield__input"} %>
                      <label class="mdl-textfield__label" for="name"><%= I18n.t(:name) %></label>
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="col-5">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <%= f.input :description, label: false, :input_html => { class: "mdl-textfield__input", rows: "5"} %>
                      <label class="mdl-textfield__label" for="description"><%= I18n.t(:description) %></label>
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="col-5">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <%= f.input :default, label: false, as: :boolean,  :input_html => { class: "mdl-checkbox__inputs"} %>
                      <label class="mdl-textfield__label" for="default" style="padding-left: 20px; margin-top: -7px;"><%= I18n.t(:default) %></label>
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="col-5">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <%= f.input :value, label: false, :input_html => { class: "mdl-textfield__input"} %>
                      <label class="mdl-textfield__label" for="value"><%= I18n.t(:value) %></label>
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="col-5">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <%= f.input :default_display_value, label: false, :input_html => { class: "mdl-textfield__input"} %>
                      <label class="mdl-textfield__label" for="default_display_value">Valeur par défaut à l'affichage</label>
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="col-5">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <%= f.input :color_code, label: "Code du couleur", :input_html => { class: 'color'} %>
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="col-5">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <%= f.input :color_priority, label: false, :input_html => { class: "mdl-textfield__input" }  %>
                      <label class="mdl-textfield__label" for="color_priority">Color Priority</label>
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="col-5">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <%= f.input :min_value, label: false, :input_html => { class: "mdl-textfield__input" }  %>
                      <label class="mdl-textfield__label" for="min_value">Minimum</label>
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="col-5">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <%= f.input :max_value, label: false, :input_html => { class: "mdl-textfield__input" }  %>
                      <label class="mdl-textfield__label" for="max_value">Maximum</label>
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="col-5">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <%= f.input :display_order, label: false, :input_html => { class: "mdl-textfield__input" } %>
                      <label class="mdl-textfield__label" for="display_order"><%= I18n.t(:display_order) %></label>
                    </div>
                  </div>
                </div>

                <% if can? :manage_modules_instances, ModuleProject %>
                  <%= f.button :submit, I18n.t('save'), class: "btn btn-primary btn-estimancy"  %>
                <% end %>
                <%= link_to I18n.t(:back), :back, class: "btn btn-secondary btn-estimancy" %>
              <% end %>

            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>