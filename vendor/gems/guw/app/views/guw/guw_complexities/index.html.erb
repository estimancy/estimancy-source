<h2>Seuil de complexité de <%= @guw_model %></h2>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Bottom range</th>
    <th>Top range</th>
    <th>Weight</th>
  </tr>

  <% @guw_complexities.each do |guw_cplx| %>
    <tr>
      <td class="align-center"><%= guw_cplx.name %></td>
      <td class="align-center"><%= guw_cplx.bottom_range %></td>
      <td class="align-center"><%= guw_cplx.top_range %></td>
      <td class="align-center"><%= guw_cplx.weight%></td>
    </tr>
  <% end %>
</table>

<%= link_to "Créer une complexité pour #{@guw_type}", new_guw_model_guw_type_guw_complexity_path(@guw_model, @guw_type), class: "btn" %>
<%= link_to "Retour", :back, class: "btn" %>