<div class="tabs">

  <ul>
    <li>
      <a href="#tabs-1">
        Seuil de complexité
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@guw_type_complexity) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">

        <%= f.input :guw_type_id, as: :hidden, input_html: { value: params[:guw_type_id] } %>

        <%= f.input :name, label: "Nom du seuil" %>
        <%= f.input :description, input_html: { rows: "5"} %>
        <%= f.input :value, label: "Valeur par défaut" %>
        <%= f.input :display_order, label: "Ordre d'affichage" %>
      </div>

      <%= f.button :submit, I18n.t('save') %>

    <% end %>
  </div>
</div>