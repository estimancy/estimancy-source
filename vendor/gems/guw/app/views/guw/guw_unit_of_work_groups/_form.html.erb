<b>
  <%= I18n.t :add_new_unit_of_work_group %>
</b>

<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">
        <%= I18n.t :add_new_unit_of_work_group %>
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@guw_unit_of_work_group) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :name, label: I18n.t(:name), :input_html => { :class => 'input-xxlarge' } %>
        <%= f.input :comments, label: I18n.t(:comments), :input_html => { :class => 'input-xxlarge' } %>
        <%= f.input :organization_technology_id, as: :select, collection: @project.organization.organization_technologies, label: I18n.t(:organization_technology) %>
      </div>

      <% if can? :execute_estimation_plan, @project %>
        <%= f.button :submit, I18n.t('save') %>
        <% unless controller.action_name == "new" %>
          <%= link_to I18n.t(:delete), guw.guw_unit_of_work_group_path(@guw_unit_of_work_group), method: "delete", confirm: I18n.t('are_you_sure'), :class => 'btn' %>
        <% end %>
      <% end %>
  <% end %>
  </div>
</div>