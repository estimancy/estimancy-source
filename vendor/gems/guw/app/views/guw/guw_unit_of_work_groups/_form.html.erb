
<div class="edition-bloc-left">
  <div class="edition-bloc-title">
    <h4>
      <%= @guw_model %> / <%= I18n.t :add_new_unit_of_work_group %>
    </h4>
  </div>
</div>


<section class="card card-content-bloc estimancy-form">
  <%= simple_form_for(@guw_unit_of_work_group) do |f| %>
        <%= f.error_notification %>

          <div class="card-body">
            <div class="edition-bloc-left">
              <div class="edition-bloc-title">
                <h1>
                  <%= @guw_model %> / <%= I18n.t :add_new_unit_of_work_group %>
                </h1>
              </div>
            </div>

            <%= f.input :organization_id, :as => :hidden, :input_html => { :value => @organization.id || params[:organization_id]} %>
            <%= f.input :project_id, :as => :hidden, :input_html => { :value => @project.id || params[:project_id]} %>

            <div class="edition-bloc-content">
              <div class="edition-bloc-form">
                <div class="form-row">
                  <div class="col-5">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <%= f.input :name, label: false, :input_html => { :class => 'mdl-textfield__input' } %>
                      <label class="mdl-textfield__label" for="name"><%= I18n.t(:name) %></label>
                    </div>
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-12">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <%= f.input :comments, label: false, :input_html => { :class => 'mdl-textfield__input' } %>
                      <label class="mdl-textfield__label" for="need"><%= I18n.t(:comments) %></label>
                    </div>
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-12">
                    <% if can? :execute_estimation_plan, @project %>
                      <%= f.button :submit, I18n.t('save'), class: "btn btn-primary" %>
                      <%= link_to I18n.t(:back), main_app.dashboard_path(@project), class: "btn btn-secondary" %>
                      <% unless controller.action_name == "new" %>
                        <%= link_to I18n.t(:delete), guw.guw_unit_of_work_group_path(@guw_unit_of_work_group), method: "delete", confirm: I18n.t('are_you_sure'), :class => 'btn btn-secondary float-right' %>
                      <% end %>
                    <% end %>
                  </div>
                </div>

              </div>
            </div>
          </div>
  <% end %>
</section>
