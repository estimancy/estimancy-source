<b>Unit of Work Group</b>
<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">
        New Unit Of Work Group
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@guw_unit_of_work_group) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :organization_technology_id, as: :select, collection: @project.organization.organization_technologies %>
      </div>

      <% if can? :execute_estimation_plan, @project %>
          <%= f.button :submit, I18n.t('save') %>
          <% unless controller.action_name == "new" %>
            <%= link_to 'Supprimer', guw.guw_unit_of_work_group_path(@guw_unit_of_work_group), method: "delete", confirm: I18n.t('are_you_sure'), :class => 'btn' %>
          <% end %>
      <% end %>
  <% end %>
  </div>
</div>