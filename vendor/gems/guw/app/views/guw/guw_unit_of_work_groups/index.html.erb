<h4>
  <b>
    Liste des groupes
  </b>
</h4>

<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">
        Groupes
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <table class="table table-bordered">
      <tr>
        <th>Nom</th>
        <th>Actions</th>
      </tr>

      <% @guw_unit_of_work_groups.each do |uowg| %>
        <tr>
          <td><%= uowg.name %></td>
          <td class="center">
            <%= link_to '', guw.edit_guw_model_guw_unit_of_work_group_path(params[:guw_model_id], uowg), class: "fa fa-pencil" %>
            <% if can? :execute_estimation_plan, @project %>
                <%= link_to '', uowg, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<br>

<% if can? :execute_estimation_plan, @project %>
    <%= link_to 'Nouveau groupe', guw.new_guw_model_guw_unit_of_work_group_path(params[:guw_model_id]), class: "btn" %>
<% end %>
<%= link_to "Retour", main_app.dashboard_path(@project), class: "btn" %>
