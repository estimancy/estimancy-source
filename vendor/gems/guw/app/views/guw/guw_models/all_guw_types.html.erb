<h4>
  <strong>
    <%= link_to @guw_model, guw.edit_guw_model_path(@guw_model, organization_id: @organization.id) %>
  </strong>
  <% if can? :manage_modules_instances, ModuleProject %>
    <%= link_to I18n.t(:new_uw_type), guw.new_guw_model_guw_type_path(@guw_model), :class => 'btn btn-primary float-right' %>
  <% end %>
</h4>

<div class="card card-content-bloc estimation-edition">
  <div class="card-body">
    <div class="row">
      <table class="table">
        <thead>
          <tr>
            <th>Nom</th>
            <th></th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @guw_types.each do |guw_type| %>
            <tr>
              <td>
                <%= link_to(guw_type.name, guw_type) %>
              </td>
              <td>
                <%= guw_type.guw_complexities.map(&:name).join(", ") %>
              </td>
              <td class="center">
                <%= link_to raw("<i class='material-icons'>edit</i>"), guw.edit_guw_model_guw_type_path(@guw_model, guw_type), :class => 'material-icons', :title => I18n.t('edit') %>
                <%= link_to raw("<i class='material-icons'>delete</i>"), guw_type, data: {confirm: I18n.t(:are_you_sure)}, :class => 'material-icons', :title => I18n.t('delete'), method: "DELETE" %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <%= render :partial => 'layouts/footer_table' %>
        </tfoot>
      </table>
    </div>
  </div>
</div>