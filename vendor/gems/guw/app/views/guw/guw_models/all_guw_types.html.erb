<h4>
  <strong>
    <%= @guw_model %>
  </strong>
  <% if can? :manage_modules_instances, ModuleProject %>
    <%= link_to I18n.t(:new_uw_type), guw.new_guw_model_guw_type_path(@guw_model), :class => 'btn btn-mini pull-right button_margin_right'%>
  <% end %>
  <%= link_to I18n.t(:manage_the , parameter: @guw_model.coefficient_label.to_s.underscore) , guw.guw_model_guw_work_units_path(@guw_model), :class => 'btn btn-mini pull-right button_margin_right' %>
  <%= link_to I18n.t(:manage_the_attribute), guw.guw_model_guw_attributes_path(@guw_model), :class => 'btn btn-mini pull-right button_margin_right' %>
  <%= link_to I18n.t(:export), guw.guw_model_exportxl_path(@guw_model), :method => 'post', :class => 'btn btn-mini pull-right button_margin_right' %>
  <%= link_to "Afficher avec des onglets", guw.guw_model_path(@guw_model), class: "btn btn-mini pull-right button_margin_right" %>
</h4>

<div class="row-fluid">
  <table class="table table-bordered table-striped tablesorterPager">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Description</th>
        <th>Attributs</th>
        <th>Seuils</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @guw_types.each do |guw_type| %>
        <tr>
          <td>
            <%= link_to(guw_type.name, guw_type) %>
          </td>
          <td>
            <%= guw_type.description.truncate(100) %>
          </td>
          <td>
            <%= guw_type.allow_criteria %>
          </td>
          <td>
            <%= guw_type.guw_complexities.map(&:name).join(", ") %>
          </td>
          <td class="span2 center">
            <%= link_to "", guw.edit_guw_model_guw_type_path(@guw_model, guw_type), class: "fa fa-edit" %>
            <%= link_to "", guw_type, method: :delete, confirm: I18n.t(:are_you_sure), class: "fa fa-trash" %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <%= render :partial => 'layouts/footer_table' %>
    </tfoot>
  </table>
</div>