<h4>
  <strong>
    <%= link_to @guw_model, guw.edit_guw_model_path(@guw_model, organization_id: @organization.id) %>
  </strong>
  <% if can? :manage_modules_instances, ModuleProject %>
    <%= link_to I18n.t(:new_uw_type), guw.new_guw_model_guw_type_path(@guw_model), :class => 'btn btn-mini pull-right button_margin_right'%>
  <% end %>
  <%= link_to "Afficher sous forme d'onglet", guw.guw_model_path(@guw_model), class: "btn btn-mini pull-right button_margin_right" %>
</h4>

<div class="row-fluid">
  <table class="table table-bordered table-striped tablesorterPager">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Description</th>
        <th>Description</th>
        <th>Description</th>
        <th>Description</th>
        <th>Description</th>
        <th>DÃ©nombrement d'attributs</th>
        <th>Seuils</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @guw_types.each do |guw_type| %>
        <tr>
          <td class="span2">
            <%= link_to(guw_type.name, guw_type) %>
          </td>
          <td>
            <%= guw_type.description.to_s.truncate(100) %>
          </td>
          <td class="span1">
            <%= guw_type.allow_criteria == true ? "Oui" : "Non" %>
          </td>
          <td class="span3">
            <%= @guw_model.guw_work_units.map(&:name).join(", ") %>
          </td>
          <td class="span3">
            <%= @guw_model.guw_weightings.map(&:name).join(", ") %>
          </td>
          <td class="span3">
            <%= @guw_model.guw_factors.map(&:name).join(", ") %>
          </td>
          <td class="span3">
            <%= @organization.organization_technologies.map(&:name).join(", ") %>
          </td>
          <td class="span4">
            <%= guw_type.guw_complexities.map(&:name).join(", ") %>
          </td>
          <td class="span1 center">
            <%= link_to "", guw.edit_guw_model_guw_type_path(@guw_model, guw_type), class: "fa fa-edit" %>
            <%= link_to "", guw_type, method: :delete, confirm: I18n.t(:are_you_sure), class: "fa fa-trash" %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <%= render :partial => 'layouts/footer_table' %>
    </tfoot>
  </table>
</div>