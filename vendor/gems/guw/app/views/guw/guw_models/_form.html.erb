<div class="row pb-5">
    <div class="col-10">
      <h4><%= I18n.t('size') %><%= ": " + " #{@guw_model.name}" %></h4>
      <h6><%= @guw_model.description %></h6>

      <section class="card card-content-bloc estimancy-form">
        <div class="mb-5">
          <div class="effort-bloc">
            <div id="settings_content" class="card-body">
              <% if @partial_name.blank? %>
                <%= render :partial => "tabs_model" %>
              <% else %>
                <%= render :partial => "guw/guw_models/#{@partial_name}" %>
              <% end %>
            </div>
          </div>
        </div>
      </section>
    </div>

  <% if action_name.in?(%w(edit update)) %>
    <div class="col-2">
      <%= render partial: "guw/guw_types/general_guw_types_menu", locals: {guw_model: @guw_model} %>
    </div>
  <% end %>
  </div>