<h4><%= current_project.title %> - <%= current_component %></h4>

<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">Real Size</a>
    </li>
  </ul>

  <div id="tabs-1" style="overflow-x: auto;">
    <%= form_tag save_path do %>
      <table class="table table-striped table-bordered table-condensed">
        <tr>
          <th>Size Unit Type</th>
          <th>Low</th>
          <th>Most Likely</th>
          <th>High</th>
          <th>Size Unit</th>
        </tr>

        <% @size_unit_types.each do |sut| %>

          <% i = RealSize::Input.where( pbs_project_element_id: current_component.id,
                                         module_project_id: current_module_project.id,
                                         size_unit_id: SizeUnit.first.id,
                                         size_unit_type_id: sut.id,
                                         project_id: current_project.id).first %>
          <tr>
            <td><%= sut.name %></td>
            <td><%= text_field_tag "value_low[#{sut.id}]", i.nil? ? '' : i.value_low %></td>
            <td><%= text_field_tag "value_most_likely[#{sut.id}]", i.nil? ? '' : i.value_most_likely %></td>
            <td><%= text_field_tag "value_high[#{sut.id}]", i.nil? ? '' : i.value_high %></td>
            <td><%= select_tag "size_unit[#{sut.id}]", options_for_select(SizeUnit.all.map{|i| [i.name, i.id]}), class: "size_unit" %></td>
          </tr>
        <% end %>

        <tr>
          <td>Total</td>
          <td>
            <%= RealSize::Input.where( pbs_project_element_id: current_component.id,
                                       module_project_id: current_module_project.id,
                                       size_unit_id: SizeUnit.first.id,
                                       project_id: current_project.id).map(&:value_low).sum %>
          </td>
          <td>
            <%= RealSize::Input.where( pbs_project_element_id: current_component.id,
                                       module_project_id: current_module_project.id,
                                       size_unit_id: SizeUnit.first.id,
                                       project_id: current_project.id).map(&:value_most_likely).sum %>
          </td>
          <td>
            <%= RealSize::Input.where( pbs_project_element_id: current_component.id,
                                       module_project_id: current_module_project.id,
                                       size_unit_id: SizeUnit.first.id,
                                       project_id: current_project.id).map(&:value_high).sum %>
          </td>
          <td>KSLOC</td>
        </tr>
      </table>

      <%= submit_tag "Save", class: 'btn' %>

  <% end %>
  </div>
</div>

<script>
  $(".size_unit_" + index).on("change", function(e){
    $.ajax({ url:'/',
      data: 'uow_id=' + $(this).val()
    })
  });
</script>