<h4><%= current_project.title %> - <%= current_component %></h4>

<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">Real Size</a>
    </li>
  </ul>

  <div id="tabs-1" style="overflow-x: auto;">
    <%= form_tag save_path do %>
      <table class="table table-striped table-bordered table-condensed">
        <tr>
          <th>Size Unit Type</th>
          <th>Quantity</th>
          <th>Size Unit</th>
        </tr>

        <% @size_unit_types.each do |sut| %>
          <tr>
            <td><%= sut.name %></td>
            <td><%= text_field_tag "sizes[]" %></td>
            <td><%= select_tag "size_unit_type", options_for_select(SizeUnit.all.map{|i| [i.name, i.id]}) %></td>
          </tr>
        <% end %>

        <tr>
          <td>Total</td>
          <td>678</td>
          <td>KSLOC</td>
        </tr>
      </table>

      <%= submit_tag "Save", class: 'btn' %>

  <% end %>
  </div>
</div>
