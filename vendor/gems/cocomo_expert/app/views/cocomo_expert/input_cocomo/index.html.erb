<h4><%= current_project.title %> - <%= current_component %></h4>
<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">Cocomo Expert</a>
    </li>
  </ul>

  <div id="tabs-1" style="overflow-x: auto;">
    <%= form_tag "/cocomo_expert/cocomo_save" do %>
      <table class="table table-striped table-bordered table-condensed">
        <tr>
          <th>Nom</th>
          <th>Description</th>
          <th>Valeur</th>
        </tr>

        <tr>
          <td colspan="4" style="text-align: center">
            <b>
              Scale factor
            </b>
          </td>
        </tr>

        <% @sf.compact.each do |factor| %>
          <% selected = InputCocomo.where(factor_id: factor.id, pbs_project_element_id: current_component.id, project_id: current_project.id).first %>
          <tr>
            <td><%= factor.name %></td>
            <td><%= factor.description %></td>
            <td><%= select_tag "factors[#{factor.id}]", options_for_select(factor.organization_uow_complexities.map{|i| [i.name, i.id]}, selected: selected.nil? ? '' : selected.organization_uow_complexity_id) %></td>
            <td>
              <%= link_to "Help", help_path(factor.id), remote: true %>
            </td>
          </tr>
        <% end %>

        <tr>
          <td colspan="4" style="text-align: center">
            <b>
              Effort multiplier
            </b>
          </td>
        </tr>

        <% @em.compact.each do |factor| %>
          <% selected = InputCocomo.where(factor_id: factor.id, pbs_project_element_id: current_component.id, project_id: current_project.id).first %>
          <tr>
            <td><%= factor.name %></td>
            <td><%= factor.description %></td>
            <td><%= select_tag "factors[#{factor.id}]", options_for_select(factor.organization_uow_complexities.map{|i| [i.name, i.id]}, selected: selected.nil? ? '' : selected.organization_uow_complexity_id) %></td>
            <td>
              <%= link_to "Help", help_path(factor.id), remote: true %>
            </td>
          </tr>
        <% end %>

      </table>
      <%= submit_tag "Save", class: 'btn' %>
    <% end %>

  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%= I18n.t :help %></h4>
      </div>
      <div class="modal-body">
        <span id="help"></span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= I18n.t :close %></button>
      </div>
    </div>
  </div>
</div>