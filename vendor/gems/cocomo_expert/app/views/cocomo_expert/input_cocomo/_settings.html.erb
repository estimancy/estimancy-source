    <%= form_tag "/cocomo_expert/cocomo_save" do %>
      <table class="table table-bordered table-condensed">

        <tr>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3">Valeur</th>
          <th>Actions</th>
        </tr>

        <tr>
          <td colspan="2">
            <b class="pull-left">
              Attribut générique
            </b>
          </td>
          <td><%= I18n.t(:low) %></td>
          <td><%= I18n.t(:most_likely) %></td>
          <td><%= I18n.t(:high) %></td>
          <td></td>
        </tr>

        <tr>
          <td>Size (SLOC)</td>
          <td>Sloc description</td>
          <% ['low', 'most_likely', 'high'].each do |level| %>
            <td>
              <% size = PeAttribute.where(alias: "sloc").first %>
              <% ev = EstimationValue.where(:module_project_id => current_module_project.id, :pe_attribute_id => size.id).first %>
              <%= text_field_tag "size_#{level}", ev.nil? ? '' : ev.send("string_data_#{level}")[current_component.id] %>
            </td>
          <% end %>
          <td>
            <%= link_to "",  "#", remote: true, class: "icon icon-list-alt" %> |
            <%= link_to "",  "#", remote: true, class: "icon icon-edit" %>
          </td>
        </tr>

        <tr>
          <td colspan="6">
            <b class="pull-left">
              <%= I18n.t(:scale_factor) %>
            </b>
          </td>
        </tr>

        <% @sf.compact.each do |factor| %>
          <% selected = InputCocomo.where(factor_id: factor.id, pbs_project_element_id: current_component.id, project_id: current_project.id).first %>
          <tr>
            <td><%= factor.name %></td>
            <td><%= factor.description %></td>
            <td colspan="3"><%= select_tag "factors[#{factor.id}]", options_for_select(factor.organization_uow_complexities.where(organization_id: current_project.organization.id).map{|i| [i.name, i.id]}, selected: selected.nil? ? '' : selected.organization_uow_complexity_id) %></td>
            <td>
              <%= link_to "", cocomo_expert.help_path(factor.id), remote: true, class: "icon icon-list-alt" %> |
              <%= link_to "", cocomo_expert.add_note_to_factor_path(factor.id), remote: true, class: "icon icon-edit" %>
            </td>
          </tr>
        <% end %>

        <tr>
          <td colspan="6">
            <b class="pull-left">
              <%= I18n.t(:effort_multiplier) %>
            </b>
          </td>
        </tr>

        <% @em.compact.each do |factor| %>
          <% selected = InputCocomo.where(factor_id: factor.id, pbs_project_element_id: current_component.id, project_id: current_project.id).first %>
          <tr>
            <td><%= factor.name %></td>
            <td><%= factor.description %></td>
            <td colspan="3"><%= select_tag "factors[#{factor.id}]", options_for_select(factor.organization_uow_complexities.where(organization_id: current_project.organization.id).map{|i| [i.name, i.id]}, selected: selected.nil? ? '' : selected.organization_uow_complexity_id) %></td>
            <td>
              <%= link_to "", cocomo_expert.help_path(factor.id), remote: true, class: "icon icon-list-alt" %> |
              <%= link_to "", cocomo_expert.add_note_to_factor_path(factor.id), remote: true, class: "icon icon-edit" %>
            </td>
          </tr>
        <% end %>

      </table>
      <%= submit_tag "Save", class: 'btn' %>
    <% end %>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%= I18n.t :help %></h4>
      </div>
      <div class="modal-body">
        <div id="content">
        </div>
      </div>
    </div>
  </div>
</div>