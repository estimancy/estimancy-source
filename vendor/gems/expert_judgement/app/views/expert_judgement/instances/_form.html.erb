<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">
        Model Jugement d'Expert
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@instance) do |f| %>
      <%= f.error_notification %>

      <%= f.input :organization_id, as: :hidden, input_html: { value: params[:organization_id] } %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description %>

        <hr>
        <%= f.input :cost_output_unit %>
        <%= f.input :cost_unit_coefficient %>

        <hr>
        <%= f.input :effort_output_unit %>
        <%= f.input :effort_unit_coefficient %>

        <hr>
        <%= f.input :size_output_unit %>

        <%= f.input :three_points_estimation, inline_label: 'Estimation 3 points' %>
      </div>

      <%= f.button :submit, I18n.t('save') %>
    <% end %>
  </div>
</div>