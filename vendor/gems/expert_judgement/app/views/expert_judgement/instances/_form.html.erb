<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">
        Modèle Jugement d'Expert
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@instance) do |f| %>
      <%= f.error_notification %>

      <%= f.input :organization_id, as: :hidden, input_html: { value: params[:organization_id] } %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description, input_html: { class: "input-xxlarge", rows: "5"} %>

        <%= f.input :three_points_estimation, label: 'Estimation 3 points' %>

        <hr>
        <h3>Cout</h3>
        <%= f.input :cost_unit, label: "Libellé de l'unité de cout du module" %>
        <%= f.input :cost_unit_coefficient, label: "Coefficient de conversion en cout standard" %>

        <hr>
        <h3>Effort</h3>
        <%= f.input :effort_unit, label: "Libellé de l'unité d'effort du module" %>
        <%= f.input :effort_unit_coefficient, label: "Coefficient de l'unité d'effort du module" %>

        <hr>
        <h3>Taille</h3>
        <%= f.input :retained_size_unit, label: "Libellé de l'unité de taille du module" %>
      </div>

      <%= f.button :submit, I18n.t('save') %>
    <% end %>
  </div>
</div>