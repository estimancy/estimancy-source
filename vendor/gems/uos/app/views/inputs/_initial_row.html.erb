<tr id="template">
  <%= hidden_field_tag "module_project_id", params[:mp] %>

  <td class="span1">
    <%= link_to "", "#", :class => "icon icon-plus", :id => "icon_0" %>
  </td>
  <td class="span1">
    <i class="icon icon-flag"></i>
  </td>
  <td class="span1">
    <%= text_field_tag "name[1]", "", :class => "name" %>
  </td>
  <td class="span1">
    <%= select_tag "technology[1]", options_for_select(current_project.organization.organization_technologies.map{|i| [i.name, i.id]}), :class => "technology" %>
  </td>
  <td class="span1">
    <%= select_tag "uow[1]", options_for_select(current_project.organization.unit_of_works.map{|i| [i.name, i.id]}), :class => "uow" %>
  </td>
  <td class="span1">
    <%= select_tag "complexity[1]", options_for_select(current_project.organization.organization_uow_complexities.map{|i| [i.name, i.id]}), :class => "complexity"  %>
  </td>
  <td class="span1">
    <%= text_field_tag "size_low[1]", "", :class => "size_low", :"data-level" => "low" %>
  </td>
  <td class="span1">
    <%= text_field_tag "size_most_likely[1]", "", :class => "size_most_likely", :"data-level" => "most_likely" %>
  </td>
  <td class="span1">
    <%= text_field_tag "size_high[1]", "", :class => "size_high", :"data-level" => "high" %>
  </td>
  <td class="span1">
    <%= text_field_tag "weight[1]", "", :class => "weight" %>
  </td>
  <td class="span1">
    <%= text_field_tag "gross_low[1]", "", :class => "gross_low" %>
  </td>
  <td class="span1">
    <%= text_field_tag "gross_most_likely[1]", "", :class => "gross_most_likely"%>
  </td>
  <td class="span1">
    <%= text_field_tag "gross_high[1]", "", :class => "gross_high" %>
  </td>
</tr>