<style>
  select, input{
    width: 100px;
  }
</style>

<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">UOs Modules</a>
    </li>
  </ul>

  <%= form_tag "/save_uos" do %>

    <%= hidden_field_tag "module_project_id", @module_project.id %>
    <div id="tabs-1" style="overflow-x: auto;">
      <table class="table table-striped table-bordered table-condensed ">
        <tr>
          <th>Actions</th>
          <th>Flag</th>
          <th>Items</th>
          <th>ItemsTechnology</th>
          <th>Uos</th>
          <th>Complexity</th>
          <th>Low</th>
          <th>Most Likely</th>
          <th>High</th>
          <th>Weight</th>
        </tr>

        <tr>
          <td>
            <%= link_to "Add", "#" %>
          </td>
          <td>
            <i class="icon icon-flag"></i>
          </td>
          <td>
            Item numero 1
          </td>
          <td class="span1">
            <%= select_tag "technologies", options_for_select(current_project.organization.organization_technologies.map{|i| [i.name, i.id]}) %>
          </td>
          <td>
            <%= select_tag "uos", options_for_select(current_project.organization.unit_of_works.map{|i| [i.name, i.id]}) %>
          </td>
          <td>
            <%= select_tag "complexities", options_for_select(current_project.organization.organization_uow_complexities.map{|i| [i.name, i.id]}) %>
          </td>
          <td><%= text_field_tag "size_low", @in_ev.nil? ? '' : string_data_low[current_component.id] %></td>
          <td><%= text_field_tag "size_most_likely", @in_ev.nil? ? '' : string_data_most_likely[current_component.id] %></td>
          <td><%= text_field_tag "size_high", @in_ev.nil? ? '' : string_data_high[current_component.id] %></td>
          <td><%= text_field_tag "weight" %></td>
        </tr>
      </table>

      <%= submit_tag I18n.t(:save), :class => "btn" %>

    </div>

  <% end %>

</div>