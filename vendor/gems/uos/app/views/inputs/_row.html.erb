<% @inputs.each do |input| %>
  <tr id="template">
    <%= hidden_field_tag "module_project_id", params[:mp] %>

    <td class="span1">
      <%= link_to "", "#", :class => "icon icon-plus", :id => "icon_0" %>
    </td>
    <td class="span1">
      <i class="icon icon-flag"></i>
    </td>
    <td class="span1">
      <%= text_field_tag "name[1]", input.name %>
    </td>
    <td class="span1">
      <%= select_tag "technologies[1]", options_for_select(current_project.organization.organization_technologies.map{|i| [i.name, i.id]}, { :id => "technology_1", :class => "technology", :selected => input.technology_id }) %>
    </td>
    <td class="span1">
      <%= select_tag "uows[1]", options_for_select(current_project.organization.unit_of_works.map{|i| [i.name, i.id]}, { :id => "uow_1", :class => "uow", :selected => input.unit_of_work_id }) %>
    </td>
    <td class="span1">
      <%= select_tag "complexities[1]", options_for_select(current_project.organization.organization_uow_complexities.map{|i| [i.name, i.id]}, { :id => "complexity_1", :class => "complexity", :selected => input.complexity_id }) %>
    </td>
    <td class="span1">
      <%= text_field_tag "size_low[1]", input.size_low, :class => "size", :"data-level" => "low" %>
    </td>
    <td class="span1">
      <%= text_field_tag "size_most_likely[1]", input.size_most_likely, :class => "size", :"data-level" => "most_likely" %>
    </td>
    <td class="span1">
      <%= text_field_tag "size_high[1]", input.size_high, :class => "size", :"data-level" => "high" %>
    </td>
    <td class="span1">
      <%= text_field_tag "weight[1]", input.weight, :class => "weight" %>
    </td>
    <td class="span1">
      <%= text_field_tag "gross_low[1]", input.gross_low, :class => "gross_low" %>
    </td>
    <td class="span1">
      <%= text_field_tag "gross_most_likely[1]", input.gross_most_likely, :class => "gross_most_likely"%>
    </td>
    <td class="span1">
      <%= text_field_tag "gross_high[1]", input.gross_high, :class => "gross_high" %>
    </td>
  </tr>
<% end %>