<%= simple_form_for(@ge_model_factor_description, :remote => true) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :ge_model_id, as: :hidden, :input_html => { value: @ge_model.id } %>
      <%= f.input :ge_factor_id, as: :hidden, :input_html => { value: @ge_factor.id } %>
      <%#= f.input :organization_id, as: :hidden, :input_html => { value: @current_organization.id } %>

      <table>
        <tr>
          <td>
            <%#= f.input :description, label: I18n.t(:description), input_html: { :class => 'input-large', rows: 10} %>
            <%= tinymce %>
            <%= f.input :description, label: I18n.t(:comments), input_html: { class: "input-xxlarge tinymce", rows: 10} %>
          </td>

        </tr>

      </table>
    </div>

    <div class="actions">
      <% if can?(:alter_estimation_plan, @project) || ( can?(:manage_estimation_widgets, @project) && @views_widget.project_fields.empty? ) %>
          <%= submit_tag I18n.t('save'), :class => 'btn' %>
      <% end %>
      <button class="btn" data-dismiss="modal" aria-hidden="true"><%= I18n.t(:close) %></button>
    </div>
<% end %>