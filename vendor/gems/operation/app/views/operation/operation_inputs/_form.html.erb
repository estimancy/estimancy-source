<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">Attributs d'entrées</a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for([@operation_model, @operation_input]) do |f| %>
        <%= f.error_notification %>

        <%= f.input :operation_model_id, as: :hidden, input_html: { value: params[:operation_model_id] } %>

        <div class="form-inputs">
          <%= f.input :name, label: I18n.t(:name) %>
          <%= f.input :description, label: I18n.t(:description), input_html: { class: "input-xxlarge", rows: "5"} %>
          <%= f.input :in_out, label: I18n.t(:in_out), as: :select, collection: [["Entrée", "input"], ["Sortie", "output"]], include_blank: false %>
          <%= f.input :is_modifiable, label: "Autoriser la modification" %>
          <%= f.input :standard_unit_coefficient, label: "Coefficient Standard de Conversion" %>
          <%= f.input :standard_unit, label: "Unité" %>
        </div>

        <div class="actions-tabs">
          <% if can?(:manage_modules_instances, ModuleProject) %>
              <%= f.button :submit, I18n.t('save'), class: "btn btn-primary" %>
          <% end %>
          <%= link_to I18n.t(:back), operation.edit_operation_model_path(@operation_model, organization_id: @current_organization.id, anchor: "tabs-2"), class: "btn" %>
        </div>
    <% end %>
  </div>
</div>
