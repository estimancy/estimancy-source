<section class="card card-content-bloc estimancy-form">
  <div class="mb-5">
    <div class="effort-bloc">

      <div class="edition-bloc-title">
        <ul>
          <li><h4><a href="#tabs-1">Attributs d'entrées</a></h4></li>
        </ul>
      </div>

      <div id="tabs-1">
        <div class="edition-bloc-content">
          <div class="edition-bloc-form">
            <%= simple_form_for([@operation_model, @operation_input]) do |f| %>
              <%= f.error_notification %>

              <%= f.input :operation_model_id, as: :hidden, input_html: { value: params[:operation_model_id] } %>

              <div class="form-row">
                <div class="col-7">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :name, :label => false, :input_html => {:class => 'mdl-textfield__input form-control', :autofocus => (controller.action_name == 'new')}  %>
                    <label class="mdl-textfield__label" for="name"><%= I18n.t(:name) %></label>
                  </div>
                </div>
              </div>

              <div class="form-row">
                <div class="col-7">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :description, :label => false, :input_html => {:class => 'mdl-textfield__input form-control', :rows => 5 }  %>
                    <label class="mdl-textfield__label" for="description"><%= I18n.t(:description) %></label>
                  </div>
                </div>
              </div>

              <div class="form-row">
                <div class="col-7">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :in_out, as: :select, collection: [["Entrée", "input"], ["Sortie", "output"]], label: "#{I18n.t :in_out}", input_html: { class: "form-control", rows: "5" } %>
                  </div>
                </div>
              </div>

              <div class="form-row">
                <div class="col-5">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :is_modifiable, as: :boolean, :label => false, :input_html => {:class => 'mdl-checkbox__inputs'}  %>
                    <label class="mdl-textfield__label" for="is_modifiable" style="padding-left: 20px; margin-top: -7px;">Autoriser la modification</label>
                  </div>
                </div>
              </div>

              <div class="form-row">
                <div class="col-7">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :standard_unit_coefficient, :label => false, :input_html => {:class => 'mdl-textfield__input form-control', :rows => 5 }  %>
                    <label class="mdl-textfield__label" for="standard_unit_coefficient">Coefficient Standard de Conversion</label>
                  </div>
                </div>
              </div>

              <div class="form-row">
                <div class="col-7">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :standard_unit, :label => false, :input_html => {:class => 'mdl-textfield__input form-control', :rows => 5 }  %>
                    <label class="mdl-textfield__label" for="standard_unit">Unité</label>
                  </div>
                </div>
              </div>

              <div class="actions-tabs">
                <% if can?(:manage_modules_instances, ModuleProject) %>
                  <%= f.button :submit, I18n.t('save'), class: "btn btn-primary" %>
                <% end %>
                <%= link_to I18n.t(:back), operation.edit_operation_model_path(@operation_model, organization_id: @current_organization.id, anchor: "tabs-2"), class: "btn btn-secondary" %>
              </div>

              <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>