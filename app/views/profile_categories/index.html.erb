<div class="tabs">
  <ul>
    <li><a href="#tabs-1"><%= I18n.t(:profile_categories) %></a></li>
  </ul>

  <div id="tabs-1">
    <table border="0" width="100%">
      <tr>
        <td style="text-align:right;">
          <%= link_to I18n.t('new_profile_category'), new_profile_category_path, :class => 'btn' %>
        </td>
      </tr>
    </table>

    <table id="table_list_1" class="table tablesorterPager table-striped table-bordered table-condensed">
      <thead>
      <tr>
        <th><%= I18n.t(:name) %></th>
        <th><%= I18n.t(:description) %></th>
        <th class="filter-select"><%= I18n.t(:record_status) %></th>
        <th class="action"><%= I18n.t(:actions) %></th>
      </tr>
      </thead>

      <% @profile_categories.each do |profile_category| %>
          <tr>
            <td><%= profile_category.name %></td>
            <td><%= profile_category.description %></td>
            <td ><%= profile_category.record_status.name unless profile_category.record_status.nil? %> <%= profile_category.show_custom_value %></td>
            <td class="center">
              <%= link_to '', edit_profile_category_path(profile_category), :class => 'icon-pencil', :title => I18n.t('edit') %>
              <%= link_to '', profile_category, confirm: I18n.t('are_you_sure'), method: :delete, :class => 'icon-remove', :style => 'color:red', :title => I18n.t('delete') %>
              <% if is_master_instance? && !profile_category.is_local_record? %>
                  <% if profile_category.is_retired? %>
                      <%= link_to('', "profile_categories/#{profile_category.id}/restore_change", confirm: I18n.t('restoring'),:class => 'icon-undo', :style => 'color:orange', :title => I18n.t('restore_title')) %>
                  <% else %>
                      <% unless profile_category.is_defined? %>
                          <%= link_to('', "profile_categories/#{profile_category.id}/validate_change", confirm: I18n.t('validation'),:class => 'icon-ok', :style => 'color:green', :title => I18n.t('validate_title')) %>
                      <% end %>
                  <% end %>
              <% end %>
            </td>

          </tr>
      <% end %>
      <%= render :partial => 'layouts/footer_table' %>
    </table>
  </div>
</div>


