<div class="tabs">
  <ul>
    <li><a href="#tabs-1"><%= I18n.t(:profile_category) %> </a></li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@profile_category) do |f| %>
        <%= f.error_notification %>

        <div class="div_tabs_to_disable" data-enable_update="<%= enable_update_in_local? %>">
          <%= f.input :organization_id, :as => :hidden, :input_html => {:value => params[:organization_id]} %>
          <%= f.input :name, :label => I18n.t('name'), :input_html => {:autofocus => (controller.action_name == 'new'), :class => 'input-xxlarge'} %>
          <%= f.input :description, :label => I18n.t('description'), :input_html => {:class => 'input-xxlarge', :rows => 5} %>

          <% if is_master_instance? %>
              <table>
                <tr>
                  <td>
                    <%= f.association :record_status, :label => I18n.t('record_status'),
                                      :collection => @profile_category.record_status_collection,
                                      :input_html => {:class => 'record_status'},
                                      :selected => (@profile_category.is_defined_or_nil? ? @proposed_status.id : @profile_category.record_status_id),
                                      :disabled => (true if @profile_category.is_retired?) %>
                  </td>
                  <td>
                    <%= f.input :custom_value, :label => I18n.t('custom_value'), :input_html => {:class => 'custom_value'}, :disabled => (true unless @profile_category.is_custom?) %>
                  </td>
                </tr>
              </table>
              <%= f.input :change_comment, :label => I18n.t('change_comment'), :input_html => {:class => 'input-xxlarge', :rows => 2} %>
          <% end %>

          <div class="actions-tabs">
            <% if action_name == 'new' || action_name=="create" %>
                <%= submit_tag I18n.t('save_and_create'), :class => 'btn' %>
                <%= submit_tag I18n.t('save'), :class => 'btn' %>
            <% elsif action_name == 'edit' || action_name=="update" %>
                <%= submit_tag I18n.t('save'), :class => 'btn' %>
                <%= submit_tag I18n.t('apply'), :class => 'btn' %>
            <% end %>
            <%= link_to I18n.t('back'), profile_categories_path, :class => 'btn back' %>
          </div>

        </div>

    <% end %>
  </div>
</div>

