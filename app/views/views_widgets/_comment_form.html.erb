<section class="card card-content-bloc estimancy-form">
  <!--<ul>-->
  <!--<li><a href="#tabs-1"><%#= I18n.t(:views_widgets) %> </a></li>-->
  <!--</ul>-->
    <%= simple_form_for(@views_widget, is_label_widget: true, :remote => true) do |f| %>
        <%= f.error_notification %>

        <div class="card-body">

          <%= f.input :view_id, as: :hidden, :input_html => { value: @view_id } %>
          <%= f.input :position_x, as: :hidden, :input_html => { value: @position_x } %>
          <%= f.input :position_y, as: :hidden, :input_html => { value: @position_y } %>
          <%= hidden_field_tag 'current_module_project_id', @module_project.id %>
          <%= f.input :is_label_widget, as: :hidden, :input_html => { value: true } %>
          <%= f.input :widget_type, as: :hidden, input_html: { value: "text" } %>

          <div class="edition-bloc-content">
            <div class="edition-bloc-form">

              <div class="form-row">
                <div class="col-6">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :name, label: false, :input_html => { :class => 'mdl-textfield__input form-control' } %>
                    <label class="mdl-textfield__label" for="name"><%= I18n.t(:name) %></label>
                  </div>
                </div>

                <!--<div class="col-6">-->
                  <!--<label class="checkbox"></label>-->
                  <!--<%#= f.input :show_name, label: I18n.t(:show_name) %>-->
                <!--</div>-->
                <!-- -->

                <div class="col-6" style="margin-top: 3rem;">
                  <%= f.input :show_name, as: :boolean, label: false, :input_html => { :class => 'mdl-checkbox__input'} %>
                  <label class="mdl-textfield__label" for="show_name" style="padding-left: 4rem; margin-top: -0.5em"><%= I18n.t(:show_name) %></label>
                </div>
              </div>

              <div class="form-row">
                <div class="col-6">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :position, label: false, :input_html => { :class => 'mdl-textfield__input form-control' } %>
                    <label class="mdl-textfield__label" for="position"><%= I18n.t(:position) %></label>
                  </div>
                </div>

              </div>

              <div class="form-row">
                <div class="col-6">
                  <!-- Color is using the JS Spectrum library -->
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                     <label class="mdl-textfield__label" for="status_color"><%= I18n.t(:status_color) %></label><br>
                      <% if @views_widget.new_record? %>
                        <%#= f.input :color, label: I18n.t(:status_color), input_html: {class: "basic", type: 'color', value: '#99ccff'} %>
                        <%= f.input :color, label: false,  input_html: { value: "blanchedalmond", :class => 'mdl-textfield__input form-control' } %>
                      <% else %>
                        <%= f.input :color, label: false, :input_html => { :class => 'mdl-textfield__input form-control'} %>
                      <% end %>

                  </div>
                </div>

                <div class="col-4">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :icon_class, as: :select, collection: Projestimate::Application::ICON_CLASSES.sort() , label: false, :input_html => { :class => 'mdl-textfield__input form-control'} %>
                    <label class="mdl-textfield__label" for="icon_class"><%= I18n.t(:icon) %></label>
                  </div>
                </div>

                <div class="col-2">
                  <i id="view_icon_class_image" class='material-icons'> </i>
                </div>
              </div>

              <div class="form-row">
                <div class="col-10">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :comment, label: false, input_html: { class: "mdl-textfield__input form-control", rows: 5 } %>
                    <label class="mdl-textfield__label" for="comment"><%= I18n.t(:widget_comment) %></label>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-row">
                  <div class="col-12">
                  <% if can?(:alter_estimation_plan, @project)%>
                      <%= submit_tag I18n.t('save'), :class => 'btn btn-primary' %>
                  <% end %>
                  <button class="btn btn-secondary" data-dismiss="modal" aria-hidden="true"><%= I18n.t(:close) %></button>
              </div>
            </div>

          </div>
        </div>

    <% end %>
</section>

