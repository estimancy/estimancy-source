<h4 class="ui-widget"><b><%= I18n.t(:add_widget_on_view) %> </b></h4>
<div>
  <% if params[:is_label_widget] == "true"  %>
    <%= render 'comment_form' %>
  <% elsif params[:is_kpi_widget] == "true"  %>
    <%= render 'kpi_form' %>
  <% elsif params[:is_project_data_widget] == "true" %>
      <%= render(:partial => "views_widgets/project_data_widget_form") %>
  <% else %>
    <%= render 'form' %>
  <% end %>

</div>
