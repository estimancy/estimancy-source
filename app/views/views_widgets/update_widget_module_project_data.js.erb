<% if !@letter.nil? %>
  $("#<%= @letter %>").html("<%=raw j(select_tag "#{@letter}",
                                     options_for_select(@module_project.estimation_values.map{|i| ["#{i} (#{i.in_out.capitalize})", i.id]}),
                                     class: 'inline_attr') %>");
<% else %>
  //Update the selected module attributes
  //$('#views_widget_estimation_value_id').html("<%#= escape_javascript(grouped_options_for_select(@module_project_attributes)) %>");
  $('#views_widget_estimation_value_id').html("<%= raw j select_tag 'views_widget[estimation_value_id]',
                                                           grouped_options_for_select({"input" => @module_project_attributes_input,
                                                                                       "output" => @module_project_attributes_output}),
                                                                                       :prompt => I18n.t(:select_associated_attribute) %>");
//                                                                                       :prompt => false %>");

  //Update the possible widget types
  //$('#views_widget_widget_type').html("<%#= escape_javascript(options_for_select(@views_widget_types)) %>");
  $('#views_widget_widget_type').html("<%= escape_javascript(grouped_options_for_select(@views_widget_types)) %>");
<% end %>