<div class="span12">
  <%= simple_form_for(@master_setting) do |f| %>
    <%= f.error_notification %>

    <div>
      <%= f.input :key %><br />
      <%= f.input :value, :input_html => { :rows => 3 } %><br />
      <%= f.input :change_comment, :input_html => { :rows => 3 } %> <br />

      <%= f.association :record_status, :label => "Status",
                        :collection => @master_setting.record_status_collection,
                        :input_html => {:class => "record_status"},
                        :selected => (@master_setting.is_defined_or_nil? ? @proposed_status.id : @master_setting.record_status_id),
                        :disabled => (true if @master_setting.is_retired?) %><br />

      <%= f.input :custom_value, :input_html => {:class => "custom_value"}, :disabled => (true unless @master_setting.is_custom?) %><br />
    </div>
    <div class="actions">
      <% if can? :update, @master_setting %>
          <%= f.submit "Save", :class => "btn btn-success" %>
          <%= f.submit "Apply", :class => "btn btn-success" %>
      <% end %>
    </div>
  <% end %>
</div>