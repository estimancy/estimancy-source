<%= simple_form_for(@event_type) do |f| %>
  <% if @event_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event_type.errors.count, "error") %> prohibited this event_type from being saved:</h2>

      <ul>
      <% @event_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div >
    <%= f.input :name %><br />

    <%= f.input :description, :input_html => { :rows => 3 }  %><br />

    <%= f.input :icon_url %><br />

    <%= f.input :change_comment, :input_html => { :rows => 3 } %><br />
    <%= f.association :record_status, :label => "Status", :selected => (@event_type.is_defined_or_nil? ? @proposed_status.id : @event_type.record_status_id), :disabled => (true if @event_type.is_retired?) %><br />
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
