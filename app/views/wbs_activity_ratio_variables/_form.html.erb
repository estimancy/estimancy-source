<%= simple_form_for(@wbs_activity_ratio_variable) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :percentage %>
    <%= f.input :is_modifiable %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
