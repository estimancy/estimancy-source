<div class="span12">
  <%= simple_form_for(@auth_method) do |f| %>

    <%= f.input :name %>
    <%= f.input :server_name %>
    <%= f.input :port, :as => :select, :collection => ["389", "636"]  %>
    <%= f.input :certificate, :label => "Use SSL" %>
    <%= f.input :base_dn %>
    <%= f.input :user_name_attribute %>  <br />

    <%= f.input :change_comment, :input_html => { :rows => 3 } %><br />
    <%= f.association :record_status, :label => "Status", :selected => (@auth_method.is_defined_or_nil? ? @proposed_status.id : @auth_method.record_status_id), :disabled => (true if @auth_method.is_retired?) %><br />

    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.submit "Apply", :class => "btn btn-success" %>
    </div>
  <% end %>
</div>
