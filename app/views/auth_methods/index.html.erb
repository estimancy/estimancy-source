<div class="span12">
  <h2><%= I18n.t(:auth_methods) %> </h2>

  <table class="table table-striped" >
    <tr>
      <th><%= I18n.t(:name) %></th>
      <th><%= I18n.t(:record_status) %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @auth_methods.each do |auth_method| %>
    <tr>
      <td><%= auth_method.name %></td>
      <td><%= auth_method.record_status.name unless auth_method.record_status.nil? %> <%= auth_method.show_custom_value %></td>
      <td><%= link_to '', edit_auth_method_path(auth_method), :class => "icn_edit", :title => "#{I18n.t "edit"}" %></td>
      <td><%= link_to '', auth_method, confirm: "#{I18n.t "are_you_sur?"}", method: :delete, :class => "icn_trash", :title => "#{I18n.t "delete"}" %></td>
      <td>
        <% if is_master_instance? && !auth_method.is_local_record? %>
            <% if auth_method.is_retired? %>
                <%= link_to("#{I18n.t "restore"}", "auth_methods/#{auth_method.id}/restore_change", confirm: 'Do you confirm restoring this record as defined ?', :title => "restore changes")%>
            <% else %>
                <% unless auth_method.is_defined? %>
                    <%= link_to("#{I18n.t "validate"}", "auth_methods/#{auth_method.id}/validate_change", confirm: 'Do you confirm changes validation on this record?', :title => "validate changes")%>
                <% end %>
            <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to "#{I18n.t "new_f"}" "#{I18n.t :auth_method}", new_auth_method_path, :class => "btn" %>
</div>

