<div class="span12">
  <h2>Authentication Methods</h2>

  <table class="table table-striped" >
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @auth_methods.each do |auth_method| %>
    <tr >
      <td><%= auth_method.name %></td>
      <td><%= auth_method.record_status.name unless auth_method.record_status.nil? %></td>
      <td><%= link_to '', edit_auth_method_path(auth_method), :class => "icn_edit", :title => "Edit" %></td>
      <td><%= link_to '', auth_method, confirm: 'Are you sure?', method: :delete, :class => "icn_trash", :title => "Delete" %></td>
      <td>
        <% unless auth_method.is_defined? %>
            <%= link_to('Validate', "auth_methods/#{auth_method.id}/validate_change", confirm: 'Do you confirm changes validation on this record?', :title => "validate changes")%>
        <% end %>
      </td>
      <td>
        <% if auth_method.is_retired? %>
            <%= link_to('Restore', "auth_methods/#{auth_method.id}/restore_change", confirm: 'Do you confirm restoring this record as defined ?', :title => "restore changes")%>
        <% else %>
            <% unless auth_method.is_defined? %>
                <%= link_to('Validate', "auth_methods/#{auth_method.id}/validate_change", confirm: 'Do you confirm changes validation on this record?', :title => "validate changes")%>
            <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Auth method', new_auth_method_path %>
</div>

