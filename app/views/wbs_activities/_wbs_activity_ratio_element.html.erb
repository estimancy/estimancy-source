<tr>
  <td><%= wbs_activity_ratio_element.wbs_activity_element.dotted_id %></td>
  <td><%= wbs_activity_ratio_element.wbs_activity_element.name %></td>
  <td><%= wbs_activity_ratio_element.wbs_activity_element.description %></td>
  <td><%= text_field_tag 'ratio_value', 1, :class => "input-small" %></td>
  <td><%= wbs_activity_ratio_element.record_status.name unless wbs_activity_ratio_element.record_status.nil? %><%= wbs_activity_ratio_element.show_custom_value %></td>

  <td>
    <% if is_master_instance? && !wbs_activity_ratio_element.is_local_record? %>
      <% if wbs_activity_ratio_element.is_retired? %>
        <%= link_to('Restore', "#{wbs_activity_ratio_element.id}/restore_change", confirm: 'Do you confirm restoring this record as defined ?', :title => 'restore changes') %>
      <% else %>
        <% unless wbs_activity_ratio_element.is_defined? %>
          <%= link_to('Validate', "#{wbs_activity_ratio_element.id}/validate_change", confirm: 'Do you confirm changes validation on this record?', :title => 'validate changes') %>
        <% end %>
      <% end %>
    <% end %>
  </td>
</tr>