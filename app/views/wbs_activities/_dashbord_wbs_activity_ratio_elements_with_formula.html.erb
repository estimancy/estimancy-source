                      <% else %>
                          <td>
                            <%= text_field_tag "theoretical_effort_high_visible[#{mp_ratio_element.id}]", convert_wbs_activity_value(mp_ratio_element.theoretical_effort_high, effort_unit_coeff), :class => "input-small",  disabled: true, :step => 0.000001 %>
