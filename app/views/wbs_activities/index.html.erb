<h4 class="ui-widget">&nbsp;<i class="icon-list"></i>&nbsp;<b><%= I18n.t(:wbs_activities) %> </b></h4>
<div class="tabs">
  <ul>
    <li><a href="#tabs-1"><%= I18n.t(:wbs_activities) %> </a></li>
  </ul>

  <div id="tabs-1">
    <% if can? :create_wbs_activities, WbsActivity %>
        <table border="0" width="100%">
          <tr>
            <td style="text-align:right;">
              <a href="#myWBSModal" role="button" class="btn" title="<%= I18n.t(:guide_import_wbs_activity) %>" data-toggle="modal"><%= I18n.t(:import_wbs_activity) %></a>
              <%= link_to I18n.t(:new_wbs_activity), new_wbs_activity_path, :class => 'btn', :title => "#{I18n.t(:guide_create_wbs_activity)}" %>
            </td>
          </tr>
        </table>
    <% end %>

    <table id="table_list_1" class="table tablesorterPager table-striped table-bordered table-condensed">
      <thead>
      <tr>
        <th><%= I18n.t(:name) %></th>
        <th><%= I18n.t(:description) %></th>
        <th class="filter-select"><%= I18n.t(:organizations) %></th>
        <th class="filter-select"><%= I18n.t(:state) %></th>
        <th class="filter-select"><%= I18n.t(:record_status) %></th>
        <th class="action" style="width: 160px"><%= I18n.t(:actions) %></th>
      </tr>
      </thead>

      <% @wbs_activities.each do |wbs_activity| %>
          <tr>
            <td><%= wbs_activity.name %></td>
            <td><%= wbs_activity.description %></td>
            <td><%= wbs_activity.organization unless wbs_activity.organization.nil? %></td>
            <td><%= wbs_activity.state %></td>
            <td><%= wbs_activity.record_status.name unless wbs_activity.record_status.nil? %><%= wbs_activity.show_custom_value %></td>
            <td>
              <%= link_to '', edit_wbs_activity_path(wbs_activity, :anchor => 'tabs-1'), :class => 'button_attribute_tooltip icon-pencil icon-large icon-border pull-left', :title => I18n.t(:edit), confirm: (I18n.t(:text_master_force_edit) if wbs_activity.is_defined?) %>
              <% if can? :create_wbs_activities, WbsActivity %>
                  <%= link_to('', "wbs_activities/#{wbs_activity.id}/duplicate_wbs_activity", :class => 'button_attribute_tooltip icon-copy icon-large icon-border pull-left', :title => 'Duplicate') %>
              <% end %>
              <% if can? :manage, WbsActivity %>
                  <%= link_to '', wbs_activity, confirm: I18n.t(:are_you_sur), method: :delete, :class => 'button_attribute_tooltip icon-remove icon-large icon-border pull-left', :style => 'color:red', :title => I18n.t(:delete) %>
                  <% if is_master_instance? && !wbs_activity.is_local_record? %>
                      <% if wbs_activity.is_retired? and can? :restore, :all %>
                          <%= link_to('', "wbs_activities/#{wbs_activity.id}/restore_change", confirm: I18n.t(:actions), :title => I18n.t(:restore_title), :class => 'button_attribute_tooltip icon-undo icon-large icon-border pull-left', :style => 'color:orange') %>
                      <% else %>
                          <% unless wbs_activity.is_defined? and can? :validate, :all %>
                              <%= link_to('', "/wbs_activities/#{wbs_activity.id}/validate_change_with_children", confirm: 'Do you confirm changes validation on this record and all its elements?', :title => I18n.t(:validate_title), :class => 'button_attribute_tooltip icon-ok icon-large icon-border pull-left', :style => 'color:green') %>
                          <% end %>
                      <% end %>
                  <% end %>
              <% end %>
            </td>
          </tr>
      <% end %>
      <%= render :partial => 'layouts/footer_table' %>
    </table>

    <div id="myWBSModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <%= form_tag import_wbs_activities_path, :multipart => true, :class => 'simple_form' do %>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 id="myModalLabel"><%= I18n.t(:import) %> WBS Activity</h3>
          </div>
          <div class="modal-body">
            <label><%= I18n.t(:file_csv) %></label>
            <%= file_field_tag :file %>

            <label><%= I18n.t(:separator) %>'<%= I18n.t(:general_csv_separator) %>') </label>
            <%= text_field_tag :separator %>

            <label><%= I18n.t(:encoding) %></label>
            <%= select_tag :encoding, options_for_select(Project::encoding, :selected => I18n.t(:general_csv_encoding)) %>
          </div>
          <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <%= submit_tag I18n.t(:import), :class => 'btn btn-primary', :onclick => "$('.loading').show();" %>
          </div>
          <div class="loading span11 hide">
            <h4><%= I18n.t(:please_wait_import) %><%= image_tag 'ajax-loader.gif' %> </h4>
          </div>
      <% end %>
    </div>

  </div>
</div>
