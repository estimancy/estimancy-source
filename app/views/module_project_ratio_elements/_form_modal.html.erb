<%= simple_form_for(@module_project_ratio_element) do |f| %>

    <%= f.error_notification %>

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h4 class="modal-title" id="comments_label_new_mp_ratio_element">
        <%= I18n.t(:create_mp_ratio_element) %>
      </h4>
    </div>

    <div class="modal-body">
      <%= hidden_field_tag 'module_project_id', params[:module_project_id] %>
      <%= hidden_field_tag 'wbs_activity_ratio_id', params[:wbs_activity_ratio_id] %>
      <%= hidden_field_tag 'pbs_project_element_id', params[:pbs_project_element_id] %>

      <%= f.input :name, :label => I18n.t('name'), :input_html => { value: @module_project_ratio_element.name_to_show, :class => 'input-xlarge'} %>
      <%= f.input :parent_id, :label => I18n.t('parent'), :as => :select, :collection => @potential_parents.nil? ? [] : @potential_parents, :selected => @selected_parent.nil? ? '' : @selected_parent.id, :input_html => {:class => 'input-xxlarge'} %>
      <%= hidden_field_tag :selected_parent_id, params[:selected_parent_id] %>

      <%= f.input :position, :label => I18n.t('position'), :input_html => {:class => 'input-xlarge'} %>
      <%= f.input :description, :label => I18n.t('description'), :input_html => {rows: 3, :class => 'input-xxlarge'} %>
      <%= f.input :comments, :label => I18n.t('comments'), :input_html => {rows: 4, :class => 'input-xxlarge'} %>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal" ><%= I18n.t(:close) %></button>
      <% if can? :execute_estimation_plan, @project %>
          <button type="submit" class="btn btn-default">
            <%= I18n.t(:save) %>
          </button>
      <% end %>
    </div>
<% end %>
