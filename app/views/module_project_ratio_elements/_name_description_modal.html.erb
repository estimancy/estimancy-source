<%= form_tag save_mp_ratio_element_name_description_path, method: "post", remote: true do %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h4 class="modal-title" id="comments_label<%= mp_ratio_element.id %>">
      <% name_to_show = mp_ratio_element.name_to_show %>
      <%= name_to_show %>
    </h4>
  </div>
    <%= hidden_field_tag "module_project_ratio_element_id", mp_ratio_element.id %>
  <div class="modal-body">
    <label>
      <b>
        <%= I18n.t(:name) %>
      </b>
    </label>
    <%= text_area_tag "name[#{mp_ratio_element.id}]", name_to_show, class: "attribute_note_area form-control", readonly: !can?(:execute_estimation_plan, @project) %>

    <label>
      <b>
        <%= I18n.t(:description) %>
      </b>
    </label>
    <%= text_area_tag "description[#{mp_ratio_element.id}]", mp_ratio_element.description, class: "attribute_note_area form-control", rows: 4, readonly: !can?(:execute_estimation_plan, @project) %>

  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal" ><%= I18n.t(:close) %></button>
    <% if can? :execute_estimation_plan, @project %>
      <button type="submit" class="btn btn-primary">
        <%= I18n.t(:save) %>
      </button>
    <% end %>
  </div>
<% end %>
