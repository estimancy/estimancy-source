<%= form_tag save_mp_ratio_element_comments_path, method: "post", remote: true do %>
    <div class="modal-header modal-drag">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h4 class="modal-title" id="comments_label<%= mp_ratio_element.id %>">
        <% name_to_show = mp_ratio_element.name_to_show %>
        <%= name_to_show %>
      </h4>
    </div>
    <div class="modal-body">
      <label>
        <b>
          <%= I18n.t(:comments) %>
        </b>
      </label>
      <%= text_area_tag "comments[#{mp_ratio_element.id}]", mp_ratio_element.comments, class: "form-control attribute_note_area",  rows: 4, readonly: !can?(:execute_estimation_plan, @project) %>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal" ><%= I18n.t(:close) %></button>
      <% if can? :execute_estimation_plan, @project %>
        <button type="submit" class="btn btn-primary" data-disable-with="<%= I18n.t :please_wait %>">
          OK
        </button>
      <% end %>
    </div>
<% end %>


<script>
    var mp_id = '<%= mp_ratio_element.id %>';
    $('#comments_'+mp_id).val( $('#module_project_ratio_element_hidden_comments_'+mp_id).val());
</script>
