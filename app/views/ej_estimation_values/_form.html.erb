<%= simple_form_for(@ej_estimation_value) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :project_id %>
    <%= f.input :pbs_project_element_id %>
    <%= f.input :wbs_activity_element_id %>
    <%= f.input :minimum %>
    <%= f.input :most_likely %>
    <%= f.input :maximum %>
    <%= f.input :probable %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
