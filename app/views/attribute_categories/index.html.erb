
<div class="tabs">
  <ul>
    <li><a href="#tabs-1"><%= I18n.t(:attribute_categories) %></a></li>
  </ul>

  <div id="tabs-1">
    <table border="0" width="100%">
      <tr>
        <td style="text-align:right;">
          <%= link_to I18n.t('new_attribute_category'), new_attribute_category_path, :class => 'btn' %>
        </td>
      </tr>
    </table>

    <table id="table_list_1" class="table tablesorterPager table-striped table-bordered table-condensed ">
      <thead>
      <tr>
        <th><%= I18n.t(:name) %></th>
        <th>Alias</th>
        <th class="filter-select filter"><%= I18n.t(:record_status) %></th>
        <th class="action"><%= I18n.t(:actions) %></th>
      </tr>
      </thead>

      <tbody>

      <% if @attribute_categories.empty? %>
          <p style="text-align:center;"> <%= I18n.t('empty') %></p>
      <% else %>

          <% @attribute_categories.each do |attribute_category| %>
              <tr>
                <td><%= attribute_category.name %></td>
                <td><%= attribute_category.alias %></td>
                <td><%= attribute_category.record_status.name unless attribute_category.record_status.nil? %> <%= attribute_category.show_custom_value %></td>
                <td class="center">
                 <%= link_to '', edit_attribute_category_path(attribute_category), :class => 'icon-pencil', :title => I18n.t('edit') %>
                  <%= link_to '', attribute_category, confirm: I18n.t('are_you_sure'), method: :delete, :class => 'icon-remove', :style => 'color:red', :title => I18n.t('delete') %>

                  <% if is_master_instance? && !attribute_category.is_local_record? %>
                      <% if attribute_category.is_retired? %>
                          <%= link_to('', "attribute_categories/#{attribute_category.id}/restore_change", confirm: I18n.t('restoring'),:class => 'icon-undo', :style => 'color:orange', :title => I18n.t('restore_title')) %>
                      <% else %>
                          <% unless attribute_category.is_defined? %>
                              <%= link_to('', "attribute_categories/#{attribute_category.id}/validate_change", confirm: I18n.t('validation'),:class => 'icon-ok', :style => 'color:green', :title => I18n.t('validate_title')) %>
                          <% end %>
                      <% end %>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>

          <%= render :partial => 'layouts/footer_table' %>

          </tr>

      <% end %>
      </table>

    <div class="show_modules_using_attribute">
      <%#= raw render :partial => 'pe_attributes/find_use_attribute_modules' %>
    </div>

  </div>
</div>



