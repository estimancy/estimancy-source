
<%= simple_form_for(@record_status) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :change_comment, :input_html => { :rows => 3 } %><br />
    <%= f.association :record_status, :label => "Status", :selected => (@record_status.is_defined_or_nil? ? @proposed_status.id : @record_status.record_status_id), :disabled => (true if @record_status.is_retired?) %><br />
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
