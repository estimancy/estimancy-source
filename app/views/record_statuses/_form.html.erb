<%= simple_form_for(@record_status) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :change_comment, :input_html => { :rows => 3 } %><br />
    <%= f.association :record_status, :label => "Status", :selected => @proposed_status.id %><br />
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
