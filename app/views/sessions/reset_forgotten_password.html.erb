<h2><%= I18n.t(:button_forgotten_password ) %></h2>
<%= form_tag '/reset_forgotten_password', :class => 'simple_form' do %>
    <%= label_tag  I18n.t('login_name_or_email') %>
    <%= text_field_tag :login_name, cookies[:login_name], :class => 'login_info' %>

    <div class="actions-tabs"><%= submit_tag  I18n.t('send_request') %></div>
    <div>
      <br/>
      <%= I18n.t(:text_forgotten_password_help ) %>
      <br/>
    </div>

    <br/>
    <div id="notifications">
      <%= render 'layouts/notifications' %>
    </div>
    <div class="actions" align="right" >
      <div>
        <br/>
        <%= link_to  I18n.t('back'), root_url %>
        <br/>
      </div>
    </div>

<% end %>