<%= simple_form_for @user, :url => password_reset_path(params[:id]), :method => :post do |f| %>
  <%= f.input :password, :label => I18n.t('password') %>
  <%= f.input :password_confirmation, :label => I18n.t('password_confirmation') %>
  <div class="actions-tabs">
    <%= f.submit I18n.t('edit_password') %>
  </div>
<% end %>