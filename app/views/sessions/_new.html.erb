<div class="login_page">
    <%= form_tag sessions_path, :class => "form-horizontal" do %>

    <div class="login_input">
      <div class="input-prepend">
        <span class="add-on"><img src="/assets/man.png" /></span>
        <%= text_field_tag :username, cookies[:login], :class => "login_username  input-xlarge", :placeholder => "Username" %>
      </div>

      <div class="input-prepend">
        <span class="add-on"><img src="/assets/keez.png" /></span>
        <%= password_field_tag :password, "", :class => "login_pw input-xlarge", :placeholder => "Password" %>
      </div>

      <label class="checkbox">
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        Remember me
      </label>
    </div>

    <div class="pull_right">

      <div class="login_connexion">
        <%= submit_tag "Connect", :class => "btn btn-danger" %>
      </div>

      <%= link_to "Need help ?",  "/help_login", :remote => true %> <br/>
      <%= link_to "Forgotten password ?", "/forgotten_password", :remote => true %> <br/>
      <%= link_to "Ask a new account", "/ask_new_account", :remote => true %>
    </div>


    <% if flash[:error] -%>
      <div class='alert alert-error'>
        <button type="button" class="close" data-dismiss="alert">×</button>
        <%= flash[:error] -%></div>
    <% end -%>
    <% if flash[:notice] -%>
      <div class='alert alert-info'>
        <button type="button" class="close" data-dismiss="alert">×</button>
        <%= flash[:notice] -%></div>
    <% end -%>

    <br/>
  <% end %>
</div>