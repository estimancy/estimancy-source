<div class="tabs">
  <ul>
    <li><a href="#tabs-1"><%= I18n.t(:budget_type) %> </a></li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for([@organization, @budget]) do |f| %>
      <%= f.error_notification %>

      <%= f.input :organization_id, :as => :hidden, :input_html => { :value => @organization.id } %>

      <%= f.input :name, :label => I18n.t('name'), :input_html => {:class => 'input-xxlarge', :autofocus => (controller.action_name == 'new')} %>
      <%# apps = @organization.applications %>
      <%#= f.input :application_id,
                  as: :select,
                  collection: apps.empty? ? @current_organization_apps.sort { |x, y| x.name <=> y.name }.map{|i| [i.name, i.id]} : apps.sort { |x, y| x.name <=> y.name }.map{|i| [i.name, i.id]},
                  label: I18n.t(:label_product_name),
                  input_html: {:class => 'input-large'},
                  selected: @project.application_id %>
      <%= f.input :start_date, :label => I18n.t('start_date_budget'), :input_html => {:class => 'input-xlarge', :autofocus => (controller.action_name == 'new')} %>
      <%= f.input :end_date, :label => I18n.t('end_date_budget'), :input_html => {:class => 'input-xlarge', :autofocus => (controller.action_name == 'new')} %>
      <%= f.input :sum, :label => I18n.t('sum_budget'), :input_html => {:class => 'input-xxlarge', :autofocus => (controller.action_name == 'new')} %>

      <%= hidden_field_tag :application_id, params[:application_id] %>
      <br/>

      <div class="actions-tabs">
        <% if can? :manage, BudgetType %>
          <% if action_name.in?(%w(new create)) %>
            <%= submit_tag I18n.t('save_and_create'), :class => 'btn btn-primary' %>
            <%= submit_tag I18n.t('save'), :class => 'btn btn-primary' %>
          <% elsif action_name == 'edit' || action_name=='update' %>
            <%= submit_tag I18n.t('save'), :class => 'btn btn-primary' %>
            <%= submit_tag I18n.t('apply'), :class => 'btn btn-primary' %>
          <% end %>
        <% end %>
        <%= link_to I18n.t('back'), organization_setting_path(@organization, anchor: 'tabs-budget-area'), :class => 'btn' %>
      </div>
    <% end %>
  </div>
</div>