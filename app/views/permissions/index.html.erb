<h2>Permissions</h2>
<div class="span12">
  <table class="table table-strpied">
      <tr>
        <th>Permissions</th>
        <th>Status</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @permissions.each do |perm| %>
      <tr>
        <td><%= perm.name %></td>
        <td><%= perm.record_status.name unless perm.record_status.nil? %></td>
        <td><%= link_to "", edit_permission_path(perm), :class => "icn_edit", :title => "Edit" %></td>
        <td><%= link_to "", perm, confirm: 'Are you sure?', method: :delete, :class => "icn_trash", :title => "Delete" %></td>
        <td>
          <% unless perm.is_defined? %>
              <%= link_to('Validate', "permissions/#{perm.id}/validate_change", confirm: 'Do you confirm changes validation on this record?', :title => "validate changes")%>
          <% end %>
        </td>
        <td>
          <% if perm.is_retired? %>
              <%= link_to('Restore', "permissions/#{perm.id}/restore_change", confirm: 'Do you confirm restoring this record as defined ?', :title => "restore changes")%>
          <% else %>
              <% unless perm.is_defined? %>
                  <%= link_to('Validate', "permissions/#{perm.id}/validate_change", confirm: 'Do you confirm changes validation on this record?', :title => "validate changes")%>
              <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <br />

  <%= link_to 'New Permission', new_permission_path, :class => "btn" %>
</div>

