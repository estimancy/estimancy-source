<div class="span12">
  <div class="module width_full">
    <table class="tablesorter">
        <tr>
          <th>Permissions</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

      <% @permissions.each do |perm| %>
        <tr>
          <td><%= perm.name %></td>
          <td><%= link_to "", edit_permission_path(perm), :class => "icn_edit" %></td>
          <td><%= link_to "", perm, confirm: 'Are you sure?', method: :delete, :class => "icn_trash" %></td>
        </tr>
      <% end %>
    </table>

  <br />

  <%= link_to 'New Permission', new_permission_path %>
  </div>
</div>

