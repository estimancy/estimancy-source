<div class="span12">
  <table class="table table-strpied">
      <tr>
        <th>Permissions</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @permissions.each do |perm| %>
      <tr>
        <td><%= perm.name %></td>
        <td><%= link_to "", edit_permission_path(perm), :class => "icn_edit" %></td>
