<div class="span12">
  <h1><%=  @permission.description %></h1>

  <%= simple_form_for(@permission) do |f| %>
      <%= f.input :name %>

      <%= f.input :description %><br />

      <%= f.input :is_permission_project, :as => :select, :collection => [true, false] %>

      <%= f.input :object_associated, :as => :select, :collection => ActiveRecord::Base.connection.tables.map{|t| t.classify }.compact.reject{|j| j == "SchemaMigration" } %>

    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.submit "Apply", :class => "btn btn-success" %>
    </div>
  <% end %>
</div>
