<div class="tabs">
  <ul>
    <li><a href="#tabs-1"><%= I18n.t(:label_view) %> </a></li>
  </ul>

  <div id="tabs-1">

    <%= simple_form_for(@view) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :organization_id, as: :hidden, :input_html => { value: @organization.id } %>
        <%= f.input :name %>
        <%= f.input :description, :input_html => { rows: 10, class: 'input-xxlarge' } %>
        <%#= f.association :organization, collection: current_user.organizations %>
      </div>

      <div class="actions">
        <%= submit_tag I18n.t('save'), :class => 'btn' %>
        <%= link_to I18n.t('back'), :back, :class => 'btn' %>
      </div>
    <% end %>
  </div>
</div>