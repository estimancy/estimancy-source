  </tr>

<% @views.each do |view| %>
  <tr>
    <td><%= view.name %></td>
    <td><%= view.organization_id %></td>
    <td><%= view.description %></td>
    <td><%= link_to 'Show', view %></td>
    <td><%= link_to 'Edit', edit_view_path(view) %></td>
    <td><%= link_to 'Destroy', view, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

