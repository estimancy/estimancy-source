<%= simple_form_for(@wbs_project_element) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :label => I18n.t("name"), :input_html => { :class => 'input-xxlarge' }, :disabled => disabled_if_from_library  %>
    <%= f.input :parent_id, :label => I18n.t("parent"), :as => :select, :collection => @potential_parents.nil? ? [] : @potential_parents, :label => "Parent element", :selected => @selected_parent.nil? ? '' : @selected_parent.id,  :input_html => { :class => 'input-xxlarge' }, :disabled => disabled_if_from_library %>
    <%= f.input :pe_wbs_project_id, :label =>"Pe-WBS Project", :as => :hidden, :label => "PE-WBS-Project", :input_html => { :value => @pe_wbs_project_activity.id, :class => 'input-xxlarge' } %>
    <%= hidden_field_tag 'project_id', @project.id %>
    <%= f.association :pbs_project_elements, :as => :select, :collection => @pe_wbs_project_product.pbs_project_elements.all.map{|pbs| [pbs.name, pbs.id]}, :input_html => { :class => 'input-xxlarge'}, :prompt => "Link current activity to one Product" %>

    <%= f.input :description, :label =>I18n.t("description"), :input_html => { :class => 'input-xxlarge', :rows => 3 }, :disabled => disabled_if_from_library  %>
    <%= f.input :additional_description, :label =>I18n.t("additionnal_description"), :input_html => { :class => 'input-xxlarge', :rows => 5 }  %>
    <%= f.input :exclude, :label =>I18n.t("exlude") %>
  </div>

  <div class="">
    <%= f.button :submit %>
  </div>
<% end %>
