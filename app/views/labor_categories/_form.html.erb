<div class="span12">
  <h1><%=  @labor_category.name %></h1>
  <%= simple_form_for(@labor_category) do |f| %>

    <%= f.input :name %>

    <%= f.input :description %>

    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.submit "Apply", :class => "btn btn-success" %>
    </div>
  <% end %>
</div>
