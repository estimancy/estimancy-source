<div class="span12">
  <%= simple_form_for(@labor_category) do |f| %>

    <%= f.input :name %>

    <%= f.input :description, :input_html => { :rows => 3 } %>

    <%= f.input :change_comment, :input_html => { :rows => 3 } %>

    <%= f.association :record_status, :label => "Status", :selected => (@labor_category.is_defined_or_nil? ? @proposed_status.id : @labor_category.record_status_id), :disabled => (true if @labor_category.is_retired?) %><br />

    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.submit "Apply", :class => "btn btn-success" %>
    </div>
  <% end %>
</div>
