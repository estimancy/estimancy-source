<div class="span12">
  <%= simple_form_for(@admin_setting) do |f| %>

    <div >
      <%= f.input :key %>

      <%= f.input :value %>

      <%= f.input :change_comment, :input_html => { :rows => 3 } %><br />

      <%= f.association :record_status, :label => "Status", :selected => (@admin_setting.is_defined_or_nil? ? @proposed_status.id : @admin_setting.record_status_id), :disabled => (true if @admin_setting.is_retired?) %><br />
    </div>

    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.submit "Apply", :class => "btn btn-success" %>
    </div>
  <% end %>
</div>