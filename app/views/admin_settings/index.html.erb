<div class="span12">
  <h1>Administration settings</h1>

  <table class="table table-striped" >
    <tr>
      <th>Key</th>
      <th>Value</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @admin_settings.each do |admin_setting| %>
    <tr >
      <td><%= admin_setting.key %></td>
      <td><%= admin_setting.value %></td>
      <td><%= admin_setting.record_status.name unless admin_setting.record_status.nil? %> <%= admin_setting.show_custom_value %></td>
      <td><%= link_to '', edit_admin_setting_path(admin_setting), :class => "icn_edit", :title => "Edit" %></td>
      <% if admin_setting.is_local? and User.local_instance? %>
        <td><%= link_to '', admin_setting, confirm: 'Are you sure?', method: :delete, :class => "icn_trash", :title => "Delete" %></td>
      <% end %>
      <td>
        <% if is_master_instance? && !admin_setting.is_local_record? %>
            <% if admin_setting.is_retired? %>
                <%= link_to('Restore', "admin_settings/#{admin_setting.id}/restore_change", confirm: 'Do you confirm restoring this record as defined ?', :title => "restore changes")%>
            <% else %>
                <% unless admin_setting.is_defined? %>
                    <%= link_to('Validate', "admin_settings/#{admin_setting.id}/validate_change", confirm: 'Do you confirm changes validation on this record?', :title => "validate changes")%>
                <% end %>
            <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Admin setting', new_admin_setting_path, :class => "btn" %>
</div>