<div class="form_table_container">
    <table border="0" width="100%"> 
        <tr>
          <td><h2>Attributes</h2></td>
          <td style="text-align:right;">
              <%= link_to 'New Attribute', new_attribute_path, :class => "btn" %>
          </td>
        </tr>
    </table>

      <table class="table table-striped">
        <tr>
          <th>Name</th>
          <th>Alias</th>
          <th>Description</th>
          <th>Attribute Type</th>
          <th></th>
          <th></th>
        </tr>
        <% if @attributes.empty? %>
          <p style="text-align:center;"> No Attributes found</p>
         <% else %>
          <% @attributes.each do |attribute| %>
            <tr>
              <td><%= attribute.name %></td>
              <td><%= attribute.alias %></td>
              <td><%= attribute.description %></td>
              <td><%= attribute.attr_type.humanize %></td>
              <td><%= link_to 'Edit', edit_attribute_path(attribute) %></td>
              <td><%= link_to 'Destroy', attribute, confirm: 'Are you sure?', method: :delete %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
      
    <table border="0" width="100%"> 
      <tr>
       <td style="text-align:right;">
            <%= link_to 'New Attribute', new_attribute_path, :class => "btn" %>
       </td>      
      </tr>
    </table>        

</div>
