<%= simple_form_for(@size_unit_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :alias %>
    <%= f.input :description %>
    <%= hidden_field_tag "[size_unit_type][organization_id]", params[:organization_id] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
