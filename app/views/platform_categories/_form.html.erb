<div class="span12">
  <%= simple_form_for(@platform_category) do |f| %>
    <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :description, :input_html => {:rows => 3} %>
    <%= f.input :change_comment, :input_html => {:rows => 3} %><br />

    <%= f.association :record_status, :label => "Status",
                      :collection => @platform_category.record_status_collection,
                      :input_html => {:class => "record_status"},
                      :selected => (@platform_category.is_defined_or_nil? ? @proposed_status.id : @platform_category.record_status_id),
                      :disabled => (true if @platform_category.is_retired?) %><br />

    <%= f.input :custom_value, :input_html => {:class => "custom_value"}, :disabled => (true unless @platform_category.is_custom?) %><br />

    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.submit "Apply", :class => "btn btn-success" %>
    </div>
  <% end %>

</div>
