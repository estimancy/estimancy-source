<div class="span12">
  <%= simple_form_for(@platform_category) do |f| %>
    <%= f.error_notification %>

    <%= f.input :name , :label => "#{I18n.t "name"}"%>
    <%= f.input :description, :input_html => {:rows => 3} , :label => "#{I18n.t "description"}"%>
    <%= f.input :change_comment, :input_html => {:rows => 3} , :label => "#{I18n.t "change_comment"}"%><br />

    <%= f.association :record_status, :label => "#{I18n.t "record_status"}",
                      :collection => @platform_category.record_status_collection,
                      :input_html => {:class => "record_status"},
                      :selected => (@platform_category.is_defined_or_nil? ? @proposed_status.id : @platform_category.record_status_id),
                      :disabled => (true if @platform_category.is_retired?) %><br />

    <%= f.input :custom_value, :input_html => {:class => "custom_value"}, :disabled => (true unless @platform_category.is_custom?), :label => "#{I18n.t "custom_value"}" %><br />

    <div class="actions">
      <% if can? :update, @platform_category %>
          <%= f.submit "#{I18n.t "save"}", :class => "btn btn-success" %>
          <%= f.submit "#{I18n.t "apply"}", :class => "btn btn-success" %>
      <% end %>
    </div>
  <% end %>

</div>
