<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">
        Statut des demandes
      </a>
    </li>
  </ul>
  <div id="tabs-1">
    <%= simple_form_for([@organization, @demand_status]) do |f| %>
      <%= f.error_notification %>

      <%= f.input :name, :label => I18n.t('name'), :input_html => { :class => 'input-xxlarge', :autofocus => (controller.action_name == 'new')} %>
      <%= f.input :status_number, :label => I18n.t('status_number'), :input_html => { :class => 'input-xxlarge' } %>
      <%= f.input :status_alias, :label => I18n.t('status_alias'), :input_html => { :class => 'input-xxlarge' } %>
      <%= f.input :status_color, :label => I18n.t('status_color'), :input_html => { :class => 'input-xxlarge' } %>
      <%= f.input :organization_id, as: :hidden, input_html: { :value => @organization.id } %>

      <div class="actions-tabs">
        <% if action_name == 'new' || action_name=="create" %>
          <%= submit_tag I18n.t('save_and_create'), :class => 'btn btn-primary' %>
          <%= submit_tag I18n.t('save'), :class => 'btn btn-primary' %>
        <% elsif action_name == 'edit' || action_name=="update" %>
          <%= submit_tag I18n.t('save'), :class => 'btn btn-primary' %>
          <%= submit_tag I18n.t('apply'), :class => 'btn btn-primary' %>
        <% end %>
        <%= link_to I18n.t('back'), :back, :class => 'btn' %>
      </div>
    <% end %>
  </div>
</div>
