<div class="tabs">
  <ul>
    <li><a href="#tabs-1"><%= I18n.t(:languages) %></a></li>
  </ul>

  <div id="tabs-1">
    <table border="0" width="100%">
      <tr>
        <td style="text-align:right;">
          <%= link_to I18n.t('new_language'), new_language_path, :class => 'btn' %>
        </td>
      </tr>
    </table>

    <table class="table table-striped table-bordered table-condensed">
      <thead>
      <tr>
        <th><%= I18n.t(:name) %></th>
        <th><%= I18n.t(:local) %></th>
        <th><%= I18n.t(:record_status) %></th>
        <th><%= I18n.t(:actions) %></th>
      </tr>
      </thead>

      <% @languages.each do |language| %>
          <tr>
            <td><%= language.name %></td>
            <td><%= language.locale %></td>
            <td><%= language.record_status.name unless language.record_status.nil? %> <%= language.show_custom_value %></td>
            <td>
              <%= link_to '', edit_language_path(language), :class => 'icn_edit', :title => I18n.t('edit') %>
              <%= link_to '', language, confirm: I18n.t('are_you_sur'), method: :delete, :class => 'icn_trash', :title => I18n.t('delete') %>
              <% if is_master_instance? && !language.is_local_record? %>
                  <% if language.is_retired? %>
                      <%= link_to(I18n.t('restore'), "languages/#{language.id}/restore_change", confirm: I18n.t('restoring'), :title => I18n.t('restore_title')) %>
                  <% else %>
                      <% unless language.is_defined? %>
                          <%= link_to(I18n.t('validate'), "languages/#{language.id}/validate_change", confirm: I18n.t('validation'), :title => I18n.t('validate_title')) %>
                      <% end %>
                  <% end %>
              <% end %>
            </td>
          </tr>
      <% end %>
    </table>

  </div>
</div>