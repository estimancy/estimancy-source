<div class="span12">
  <%= simple_form_for(@language) do |f| %>

    <div >
      <%= f.input :id %>
      <%= f.input :name %>
      <%= f.input :locale %>
      <%= f.input :change_comment %>
    </div>

    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.submit "Apply", :class => "btn btn-success" %>
    </div>
  <% end %>
</div>
