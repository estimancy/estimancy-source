<div class="span12">
  <%= simple_form_for(@language) do |f| %>

    <div >
      <%= f.input :name %>
      <%= f.input :locale %>
      <%= f.input :change_comment, :input_html => { :rows => 3 } %>
      <%= f.association :record_status, :label => "Status", :selected => (@language.is_defined_or_nil? ? @proposed_status.id : @language.record_status_id), :disabled => (true if @language.is_retired?) %><br />
    </div>

    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.submit "Apply", :class => "btn btn-success" %>
    </div>
  <% end %>
</div>
