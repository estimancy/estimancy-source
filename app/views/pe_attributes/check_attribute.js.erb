<% unless @is_valid %>
  $(".<%= @level %>.<%= @est_val_id %>").css("border", "1px solid red");
<% else %>
  $(".<%= @level %>.<%= @est_val_id %>").css("border", "1px solid #cccccc");
<% end %>

$('.input-mini').blur(
    function(){
        $.ajax({
            url:"check_attribute",
            type: 'POST',
            data: "value=" + this.value + "&level=" + this.className.split(/\s/)[1] + "&est_val_id=" + this.className.split(/\s/)[2]
        })
});