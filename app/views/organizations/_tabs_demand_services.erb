<div id="services">
  <%= link_to "#{I18n.t :create_a_service}", new_organization_service_path(@organization), class: "btn btn-primary btn-estimancy" %>
  <hr>

  <table id="table_list_1" class="table table-list">
    <thead>
    <tr>
      <th>
        <%= I18n.t(:name) %>
      </th>
      <th>
        <%= I18n.t(:description) %>
      </th>
      <th>
        <%= I18n.t(:livrable) %>
      </th>
      <th>
        <%= I18n.t(:actions) %>
      </th>
    </tr>
    </thead>

    <tbody>
    <% @services.each do |service| %>
        <tr>
          <td><%= service.name %></td>
          <td><%= service.description %></td>
          <td><%= service.livrable %></td>
          <td>
            <%= link_to raw("<i class='material-icons'>edit</i>"), edit_organization_service_path(@organization, service) , :class => 'material-icons', :title => I18n.t('edit') %>
            <%= link_to raw("<i class='material-icons'>delete</i>"),  organization_service_path(@organization, service), confirm: I18n.t('are_you_sure'), method: :delete, :class => 'material-icons', :title => I18n.t('delete') %>
          </td>
        </tr>
    <% end %>
    </tbody>

    <%= render :partial => 'layouts/footer_table' %>
  </table>
</div>