<div id="livrables">
  <%= link_to "#{I18n.t :create_a_livrable}", new_organization_livrable_path(@organization), class: "btn btn-primary" %>
  <hr>
  <table id="table_list_1" class="table table-list">
    <thead>
    <tr>
      <th>
        <%= I18n.t :name %>
      </th>
      <th>
        <%= I18n.t :description %>
      </th>
      <th>
        <%= I18n.t :states %> <%# Ã©tats %>
      </th>
      <th>
        <%= I18n.t :associated_service %>
      </th>
      <th>
        <%= I18n.t(:actions) %>
      </th>
    </tr>
    </thead>

    <tbody>
    <% @livrables.each do |livrable| %>
        <tr>
          <td><%= livrable.name %></td>
          <td><%= livrable.description %></td>
          <td><%= livrable.state %></td>
          <td><%= livrable.service %></td>
          <td>
            <%= link_to raw("<i class='material-icons'>edit</i>"), edit_organization_livrable_path(@organization, livrable) , :class => 'material-icons', :title => I18n.t('edit') %>
            <%= link_to raw("<i class='material-icons'>delete</i>"),  organization_livrable_path(@organization, livrable), confirm: I18n.t('are_you_sure'), method: :delete, :class => 'material-icons', :title => I18n.t('delete') %>
          </td>
        </tr>
    <% end %>
    </tbody>

    <%= render :partial => 'layouts/footer_table' %>
  </table>
</div>