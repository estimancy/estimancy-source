<div class="row">
  <div class="col-10">

    <% if @item_title.blank? %>
        <div id="tabs-demandes_types" class="edition-page-group py-4"><span id="item_title"><%= I18n.t('demands_types') %></span></div>
    <% else %>
        <div id='<%= "tabs-#{@item_title}" %>' class="edition-page-group py-4"><span id="item_title"><%= @item_title %></span></div>
    <% end %>

    <section class="card card-content-bloc estimancy-form">
      <div class="mb-5">
        <div class="effort-bloc">
          <div id="settings_content" class="card-body">
            <% if @partial_name.blank? %>
                <%= render :partial => "organizations/tabs_demand_types" %>
            <% else %>
                <%= render :partial => "organizations/#{@partial_name}" %>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  </div>

  <div class="col-2">
    <div id="edition-sidebar">
      <h4 class="mb-0">Navigation</h4>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link group" href="<%= organization_setting_demand_path(@organization, partial_name: 'tabs_demand_types', item_title: I18n.t('demands_types'), anchor: 'tabs-demandes_types') %>"><span><%= I18n.t("demands_types") %></span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link group" href="<%= organization_setting_demand_path(@organization, partial_name: 'tabs_demand_statuses', item_title: I18n.t('demands_statuses'), anchor: 'tabs-demands_statuses') %>"><span><%= I18n.t("demands_statuses") %></span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link group" href="<%= organization_setting_demand_path(@organization, partial_name: 'tabs_demand_services', item_title: I18n.t('services'), anchor: 'tabs-services') %>"><span><%= I18n.t("services") %></span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link group" href="<%= organization_setting_demand_path(@organization, partial_name: 'tabs_demand_livrables', item_title: I18n.t('livrable'), anchor: 'tabs-livrables') %>"><span><%= I18n.t("livrable") %></span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link group" href="<%= organization_setting_demand_path(@organization, partial_name: 'tabs_demand_severity', item_title: I18n.t('severity'), anchor: 'tabs-severity') %>"><span><%= I18n.t("severity") %></span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link group" href="<%= organization_setting_demand_path(@organization, partial_name: 'tabs_demand_criticality', item_title: I18n.t('criticality'), anchor: 'tabs-criticality') %>"><span><%= I18n.t("criticality") %></span></a>
        </li>
      </ul>
    </div>
  </div>

</div>
