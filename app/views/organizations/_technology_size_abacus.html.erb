<%= form_tag '/set_technology_size_abacus', :method => 'POST', :class => 'simple_form' do %>

  <%= hidden_field_tag "organization", params[:id] %>

  <div class="pull-left">
    Select the size unit to display
    <%= select_tag 'size_unit', options_for_select(@size_units.map { |i| [i.name, i.id] }), :class => 'select_size_unit' %>
  </div>

  <div id="value_section">
    <%= render 'organizations/abacus_table_values' %>
  </div>

  <% if can? :edit_organizations, Organization %>
    <%= submit_tag I18n.t('save'), :class => 'btn' %>
    <%= submit_tag I18n.t('apply'), :class => 'btn' %>
  <% end %>

<% end %>

