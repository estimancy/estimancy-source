                    <%= select_tag "report[application_id]", options_for_select(@organization.applications.map{|i| [i.name, i.id]}), prompt: I18n.t(:Indifferent), class: "form-control" %>
                  </div>
                </div>
                <br>
                <div class="row-fluid">
                  <div class="col-12">
                    <%= label_tag I18n.t(:Start_date_organizations) %>
                    <%= text_field_tag "report_date[start_date]", "", class: 'date-picker form-control' %>
                  </div>
                </div>
                <br>
                <div class="row-fluid">
                  <div class="col-12">
                    <%= label_tag I18n.t(:end_date_organizations) %>
                    <%= text_field_tag "report_date[end_date]", "", class: 'date-picker form-control' %>
                  </div>
                </div>
              </div>
              <div class="span3 well well-rounded">
                <div class="row-fluid">
                  <div class="col-12">
                    <%= label_tag I18n.t(:Platform_Categorie_organization) %>
                    <%= select_tag "report[platform_category_id]", options_for_select(@organization.platform_categories.map{|i| [i.name, i.id]}), prompt: I18n.t(:Indifferent), class: "form-control" %>
                  </div>
                </div>
                <br>
                <div class="row-fluid">
                  <div class="col-12">
                    <%= label_tag I18n.t(:Project_Category) %>
                    <%= select_tag "report[project_category_id]", options_for_select(@organization.project_categories.map{|i| [i.name, i.id]}), prompt: I18n.t(:Indifferent), class: "form-control" %>
                  </div>
                </div>
                <br>
                <div class="row-fluid">
                  <div class="col-12">
                    <%= label_tag I18n.t(:Category_acquistion) %>
                    <%= select_tag "report[acquisition_category_id]", options_for_select(@organization.acquisition_categories.map{|i| [i.name, i.id]}), prompt: I18n.t(:Indifferent), class: "form-control" %>
                  </div>
                </div>
                <br>
                <div class="row-fluid">
                  <div class="col-12">
                    <%= label_tag I18n.t(:project_area) %>
                    <%= select_tag "report[project_area_id]", options_for_select(@organization.project_areas.map{|i| [i.name, i.id]}), prompt: I18n.t(:Indifferent), class: "form-control" %>
                  </div>
                </div>
                <br>
                <div class="row-fluid">
                  <div class="col-12">
                    Estimation Status
                    <%= select_tag "report[estimation_status_id]", options_for_select(@organization.estimation_statuses.map{|i| [i.name, i.id]}), prompt: I18n.t(:Indifferent), class: "form-control" %>
                  </div>
                </div>
              </div>

              <div class="span4 well well-rounded">
                <div class="row-fluid">
                  <div class="col-12">
                    <%= label_tag I18n.t(:counting_details) %>
                    <%= check_box_tag "detail", "checked", true %>
                  </div>
                </div>

                <br>

                <div class="row-fluid">
                  <div class="col-12">
                    <%= label_tag I18n.t(:module_size_select) %>
                    <%= select_tag "guw_model_id", options_for_select(@organization.guw_models.map{|i| [i.name, i.id]}), class: "form-control" %>
                  </div>
                </div>
                <br>
              </div>
            </div>

            <br>
            <div class="row-fluid">
              <div class="col-12">
                <%= submit_tag I18n.t(:Generate_Report), :class => 'btn btn-primary btn-estimancy' %>
              </div>
            </div>
          <% end %>
        </div>
      </section>

      <div id="tabs-pdf-all" class="edition-page-group py-4"><span>Budget Report Excel</span></div>
      <section class="card card-content-bloc">
        <div class="card-body">
      <h4>
        <%= I18n.t(:quotation_PDF_export) %>
      </h4>

      <div class="row-fluid">
        <div class="col-12">
          <% @projects = @organization.projects %>
          <%= form_tag multiple_export_dashboard_path(format: "pdf"), :method => "POST", :class => 'simple_form', target: "_blank" do %>
            <div class="modal-body" style="height: inherit;">

              <p>
                <label>
                  <b> <%= I18n.t :business_need %></b>
                </label>
                <%= select_tag "business_need", options_for_select(@projects.map(&:business_need).uniq.compact), class: "form-control" %>
              </p>

              <p>
                <label>
                  <b><%= I18n.t :request_number %></b>
                </label>
                <%= select_tag "request_number", options_for_select(@projects.map(&:request_number).uniq.compact), class: "form-control" %>
              </p>

              </p>
              <label>
                <b><%= I18n.t :title %></b>
              </label>
              <%= text_field_tag :title, '', class: "form-control" %>
