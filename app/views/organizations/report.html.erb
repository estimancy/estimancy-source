              </div>

              <br>

              <div class="row-fluid">
                <div class="col-12">
                  <label>
                  <b><%= I18n.t :date_max %></b>
                  </label>
                  <%= text_field_tag :date_max, '', class: 'date-picker form-control' %>
                </div>
              </div>

            </div>

            <%= submit_tag I18n.t(:Generate_Report), :class => 'btn btn-primary btn-estimancy' %>

          <% end %>
        </div>
      </div>
    </div>
  </section>
    </div>

  <div class="col-2">
    <div id="edition-sidebar">
      <h4 class="mb-0">Navigation</h4>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link group" href="#tabs-report"><span><%= I18n.t("filtered_excel_report") %></span></a>
        </li>
