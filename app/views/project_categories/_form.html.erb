<div class="span12">
  <%= simple_form_for(@project_category) do |f| %>

    <h1><%= controller.controller_name.humanize.singularize %> </h1>

    <%= f.input :name %><br />

    <%= f.input :description %><br />

    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.submit "Apply", :class => "btn btn-success" %>
    </div>
  <% end %>
</div>
