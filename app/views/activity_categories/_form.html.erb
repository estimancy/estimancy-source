<div class="span12">

  <%= simple_form_for(@activity_category) do |f| %>

    <div >
      <%= f.input :name %><br />

      <%= f.input :description %><br />

      <%= f.input :alias %><br />

      <%= f.input :project_area_id %><br />

      <%= f.input :change_comment, :input_html => { :rows => 3 } %><br />

      <%= f.association :record_status, :label => "Status", :selected => (@activity_category.is_defined_or_nil? ? @proposed_status.id : @activity_category.record_status_id), :disabled => (true if @activity_category.is_retired?)  %><br />
    </div>

    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.submit "Apply", :class => "btn btn-success" %>
    </div>
  <% end %>
</div>
