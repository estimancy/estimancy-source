<table class="table table-striped table-bordered">
<thead>
<tr>
  <th><%= I18n.t(:name)%></th>
  <th>Alias</th>
  <th><%= I18n.t(:record_status)%></th>
  <th><%= I18n.t(:start_date)%></th>
  <th><%= I18n.t(:organization)%></th>
  <th><%= I18n.t(:actions)%></th>
</tr>
</thead>
  <% @projects.each do |project| %>
    <tr>
      <td><%= project.title %>
      <td><%= project.alias %>
      <td><%= project.state %>
      <td><%= project.start_date %>
      <td><%= project.organization %>
      <td>
        <%=
          (project.baseline? || project.access_locked? || project.closed? ) ?
            commit = link_to('', '#', :class => "icn_commit") :
            commit = link_to('', {:controller => "projects", :action => "commit", :project_id => project.id }, :class => "icn_commit", :title => "Commit")

          link_to('', "projects/#{project.id}/edit", :class => "icn_edit", :title => "Edit") +
          link_to('', {:controller => "projects", :action => "activate", :project_id => project.id }, :class => "icn_jump_back", :title => "Activate") +
          link_to('', {:controller => "projects", :action => "find_use", :project_id => project.id }, :remote => true, :class => "icn_find_use", :title => "Find use") +
          commit +
          link_to('', "projects/#{project.id}/duplicate",  :class => "icn_duplicate", :title => "Duplicate") +
          link_to('', project, confirm: I18n.t("are_you_sur?"), method: :delete, :class => "icn_trash", :title => I18n.t("delete"))
        %>
      </td>
    </tr>
  <% end %>
</table>

<table border="0" width="100%">
  <tr>
    <td style="text-align:right;">
      <% if @projects.previous_page %>
        <%= link_to I18n.t("previous"), params.merge(page: @projects.previous_page), :remote => true %>
      <% end %>
      Page <%= @projects.current_page %> <%= I18n.t(:of)%> <%= @projects.total_pages %>
      <% if @projects.next_page %>
        <%= link_to I18n.t("next"), params.merge(page: @projects.next_page), :remote => true %>
      <% end %>
    </td>
    <td>
      <% @projects.each do |project| %>
        <%= pop_up("find_use_project_#{project.id}", "#{project}'s relationships") do -%>
          <%=raw build_find_use_project_popup(project.id) %>
        <% end %>
      <% end %>
    </td>
  </tr>
</table>