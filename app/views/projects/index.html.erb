<div class="tabs">
  <ul>
    <li><a href="#tabs-1"><%= I18n.t(:projects) %></a></li>
  </ul>

  <div id="tabs-1">

    <table border="0" width="100%">
      <tr>
        <%= form_tag 'project_search', :remote => true, :method => :get, :class => 'simple_form' do %>
            <td>
              <b> <%= I18n.t(:display) %>&nbsp;</b>
              <%= select_tag 'project_record_number', options_for_select([5, 10, 25, 50]), :class => 'pull-left span2' %>
              <%= I18n.t(:record_per_page) %>
            </td>
            <td class="pull-right">
              <b><%= I18n.t(:quick_search) %>&nbsp;</b> <%= text_field_tag 'project_searches', '', :placeholder => '', :class => 'search-input' %>
            </td>
        <% end %>
      </tr>

      <tr>
        <td colspan=2 style="text-align:right;">
          <%= link_to I18n.t('new_project'), new_project_path, :class => 'btn' %>
        </td>
      </tr>
    </table>

    <div id="projects">
      <%= render :partial => 'projects', :object => @projects -%>
    </div>

  </div>
</div>