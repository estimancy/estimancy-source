<div class="row-fluid">
  <div class="widget-box collapsible">
    <div class="widget-title">
      <a href="#estimation_graph_box" data-toggle="collapse">
          <span class="icon">
            <i class="icon-bar-chart"></i>
          </span>
      </a>

      <div class="header_data">
        <h5><%= "Estimation graph" %> - <%= "#{current_module_project}" %></h5>
      </div>

      <div class="buttons">
        <%= select_tag 'pbs_list', options_for_select(current_project.root_component.subtree.map { |i| [i.name, i.id] }, :selected => current_component.id), :class => 'pull-right', :prompt => 'Product Quick Access' %>
      </div>
    </div>

    <div class="collapse in" id="collapseIn">
      <div class="widget-content tab-content">
        <div class="" id="estimation_graph_box">
          <%#= render :partial => "projects/estimation_graph", :locals => { :project_modules => @project_modules } %>
          <%= render :partial => "projects/estimation_graph" %>
        </div>
      </div>
    </div>
  </div>
</div>

