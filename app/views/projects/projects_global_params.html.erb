    <div id="tabs-1">

      <table border="0" width="100%">
        <tr>
          <td><h2>Project Area</h2></td>
          <td style="text-align:right;">
            <%= link_to 'New Project Area', new_project_area_path, :class => "btn" %>
          </td>
        </tr>
      </table>

      <table class="table table-striped">
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Status</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

          <% ProjectArea.all.each do |i| %>
             <tr>
               <td><%= i.name %></td>
               <td><%= i.description %></td>
               <td><%= i.record_status.name unless i.record_status.nil? %></td>
               <td><%= link_to '', edit_project_area_path(i), :class => "icn_edit", :title => "Edit"  %></td>
               <td><%= link_to '', i, confirm: 'Are you sure?', method: :delete, :class => "icn_trash", :title => "Delete"  %></td>
               <td>
                 <% if i.is_retired? %>
                     <%= link_to('Restore', "project_areas/#{i.id}/restore_change", confirm: 'Do you confirm restoring this record as defined ?', :title => "restore changes")%>
                 <% else %>
                     <% unless i.is_defined? %>
                         <%= link_to('Validate', "project_areas/#{i.id}/validate_change", confirm: 'Do you confirm changes validation on this record?', :title => "validate changes")%>
                     <% end %>
                 <% end %>
               </td>
             </tr>
