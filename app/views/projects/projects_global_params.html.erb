<div class="span12">
  <div id="parameter_title">
    <h2>Projects Globals Parameters</h2>
  </div>

  <div class="tabs">
    <ul>
        <li><a href="#tabs-1">Project Area</a></li>
        <li><a href="#tabs-2">Project Categories</a></li>
        <li><a href="#tabs-3">Platform Categories</a></li>
        <li><a href="#tabs-4">Acquisition Categories</a></li>
    </ul>

    <div id="tabs-1">

      <table border="0" width="100%">
        <tr>
          <td><h2>Project Area</h2></td>
          <td style="text-align:right;">
            <%= link_to 'New Project Area', new_project_area_path, :class => "btn" %>
          </td>
        </tr>
      </table>

      <table class="table table-striped">
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
            <th></th>
          </tr>

          <% ProjectArea.all.each do |i| %>
             <tr>
               <td><%= i.name %></td>
               <td><%= i.description %></td>
               <td><%= link_to 'Edit', edit_project_area_path(i) %></td>
               <td><%= link_to 'Destroy', i, confirm: 'Are you sure?', method: :delete %></td>
             </tr>
          <% end %>
        </table>
    </div>

    <div id="tabs-2">

      <table border="0" width="100%">
        <tr>
          <td><h2>Project Category</h2></td>
