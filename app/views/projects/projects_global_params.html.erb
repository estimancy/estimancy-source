                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>

                <% ProjectArea.all.each do |i| %>
                   <tr>
                     <td><%= i.name %></td>
                     <td><%= i.description %></td>
                     <td><%= link_to 'Show', i %></td>
                     <td><%= link_to 'Edit', edit_project_area_path(i) %></td>
                     <td><%= link_to 'Destroy', i, confirm: 'Are you sure?', method: :delete %></td>
