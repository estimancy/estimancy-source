               <td><%= link_to 'Destroy', i, confirm: 'Are you sure?', method: :delete %></td>
             </tr>
          <% end %>
        </table>
    </div>

    <div id="tabs-3">

      <table border="0" width="100%">
        <tr>
          <td><h2>Platform Category</h2></td>
          <td style="text-align:right;">
            <%= link_to 'New Platform Category', new_platform_category_path, :class => "btn" %>
          </td>
        </tr>
      </table>

      <table class="table table-striped">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th></th>
          <th></th>
        </tr>

        <% PlatformCategory.all.each do |i| %>
