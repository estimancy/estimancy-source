<div class="text-center">

  <% @users.each do |user| %>
    <% @prj_users = @projects.where("creator_id LIKE '%#{user.id}%'") %>
    <% @prj_users.each do |p| %>
      <%= p %>
      <br/>
    <% end %>
  <% end %>

  <% unless @adv_search_hash.length == 0 %>
    <h1> Projets </h1>
      <table class="table table-bordered table-condensed">
        <% @adv_search_hash.each do |key, valeur| %>
            <tr>
              <th scope="row"><strong><%= key %></strong></th>
            </tr>
              <% unless valeur.blank? %>
                  <% valeur.each do |val|  %>
                    <tr>
                      <td class="center"><%= val %></td>
                    </tr>
                  <% end %>
              <% else %>
                  <tr><td class="center"> --- </td></tr>
              <% end %>
            <% end %>
      </table>
  <% else %>
    <%= "Aucun résultat correspond à la recherche" %>
  <% end %>
</div>
