<div class="span12">
  <%= simple_form_for(@project_security_level) do |f| %>

    <%= f.input :name %>
    <%= f.input :change_comment, :input_html => { :rows => 3 } %>
    <%= f.association :record_status, :label => "Status", :selected => (@project_security_level.is_defined_or_nil? ? @proposed_status.id : @project_security_level.record_status_id), :disabled => (true if @project_security_level.is_retired?) %><br />

    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.submit "Apply", :class => "btn btn-success" %>
    </div>
  <% end %>
</div>
