<div class="span12">
  <%= simple_form_for(@project_security_level) do |f| %>
    <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :change_comment, :input_html => { :rows => 3 } %>

    <%= f.association :record_status, :label => "Status",
                      :collection => @project_security_level.record_status_collection,
                      :input_html => {:class => "record_status"},
                      :selected => (@project_security_level.is_defined_or_nil? ? @proposed_status.id : @project_security_level.record_status_id),
                      :disabled => (true if @project_security_level.is_retired?) %><br />

    <%= f.input :custom_value, :input_html => {:class => "custom_value"}, :disabled => (true unless @project_security_level.is_custom?) %><br />

    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.submit "Apply", :class => "btn btn-success" %>
    </div>
  <% end %>
</div>
