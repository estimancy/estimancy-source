<h1>Listing versions</h1>

<table>
  <tr>
    <th>Local latest update</th>
    <th>Repository latest update</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @versions.each do |version| %>
  <tr>
    <td><%= version.local_latest_update %></td>
    <td><%= version.repository_latest_update %></td>
    <td><%= version.comment %></td>
    <td><%= link_to 'Show', version %></td>
    <td><%= link_to 'Edit', edit_version_path(version) %></td>
    <td><%= link_to 'Destroy', version, method: :delete, data: { confirm: I18n.t('are_you_sure') } %></td>
  </tr>
<% end %>
</table>

