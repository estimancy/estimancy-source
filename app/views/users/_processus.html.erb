  <div class="span6">
    <div class="widget">
      <div class="widget-header">
        <h3>
          PE-WBS - <%= current_component %>
        </h3>
      </div>
      <div class="widget-content">
        <div class="span12">
          <%= render :partial => "users/pe_wbs" %>
        </div>
      </div>
    </div>

    <div class="widget">
      <div class="widget-header">
        <h3>
          Estimation Plan
        </h3>
      </div>
      <div class="widget-content">
        <%= render :partial => "projects/estimation_plan", :locals => { :array_module_positions => @array_module_positions, :project => @project } %>
      </div>
    </div>
  </div>

  <div class="span6">
      <% unless current_component.nil? %>
        <%= form_tag({:controller => "projects", :action => "run_estimation", :pbs_project_element_id => current_component.id}, :method => "get", :remote => true) %>

          <%=raw display_input %>

        <div class="output_data">
        </div>

        <div class="submit_link">
          <%= submit_tag "Execute estimation process", :class => "btn btn-danger" %>
        </div>

      <% end %>
    </div>
  </div>
