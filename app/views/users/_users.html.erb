<table class="table table-striped table-bordered" %>
<thead>
<tr>
  <th>First Name</th>
  <th>Sure name</th>
  <th>User Name</th>
  <th>Email</th>
  <th>Last login</th>
  <th>User Authentication</th>
  <th>Status</th>
  <th>Actions</th>
</tr>
</thead>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %>
      <td><%= user.surename %>
      <td><%= user.user_name %>
      <td><%= user.email %>
      <td><%= user.last_login %>
      <td><%= user.auth_method %>
      <td><%= user.user_status %>
      <td>
        <%= link_to('', "users/#{user.id}/edit", :class => "icn_edit", :title => "Edit") +
            link_to('', "users/#{user.id}/activate", :class => "icn_jump_back", :title => "Activate") +
            link_to('', {:controller => "users", :action => "find_use_user", :user_id => user.id }, :remote => true, :class => "icn_find_use", :title => "Find Use") +
            link_to('', user, confirm: 'Are you sure?', method: :delete, :class => "icn_trash", :title => "Delete")
        %>

      </td>
    </tr>
  <% end %>
</table>

<table border="0" width="100%">
  <tr>
    <td>
        <h5>
          Showing <strong> <%= @users.current_page %> </strong> of <strong> <%= @users.total_pages %> </strong>
        </h5>

    </td>
    <td style="text-align:right;">
      <% if @users.previous_page %>
        <%= link_to "< Previous", params.merge(page: @users.previous_page), :remote => true %>
      <% end %>
      Page <%= @users.current_page %> of <%= @users.total_pages %>
      <% if @users.next_page %>
        <%= link_to "Next >", params.merge(page: @users.next_page), :remote => true %>
      <% end %>
    </td>
    <td>
  </tr>
</table>
