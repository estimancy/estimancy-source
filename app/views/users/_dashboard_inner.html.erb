<div class="row-fluid">
  <div class="span6">
    <div class="widget-box collapsible">
      <div class="widget-title">
        <a href="#collapseProduct" data-toggle="collapse">
          <span class="icon">
            <i class="icon-align-left"></i>
          </span>
        </a>
        <h5>WBS-Product -
          <span class="component_name">
            <%= current_component %>
          </span>
        </h5>
      </div>
      <div class="collapse in" id="collapseProduct">
        <div class="widget-content resizableProduct">
          <%= render :partial => 'users/pe_wbs' %>
        </div>
      </div>
    </div>
  </div>

  <div class="span6">
    <div class="widget-box collapsible">
      <div class="widget-title">
        <a href="#collapseActivity" data-toggle="collapse">
          <span class="icon">
            <i class="icon-list"></i>
          </span>
        </a>
        <h5>WBS-Activity</h5>
      </div>
      <div class="collapse in" id="collapseActivity">
        <div class="widget-content">
          <div class="overflow">
            <%= render :partial => 'projects/generate_wbs_project_elt_tree', :object => @pe_wbs_project_activity %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= form_tag({:controller => 'projects', :action => 'run_estimation', :pbs_project_element_id => current_component.id}, :remote => true, :class => 'simple_form') do -%>

  <div class="row-fluid">
    <div class="span6">
      <div class="widget-box">
        <div class="widget-title"><span class="icon"><i class="icon-align-left"></i></span>
          <h5>Estimation module - Input data </h5>
          <div class="buttons">
            <%= select_tag "pbs_list",  options_for_select(current_project.root_component.subtree.map{|i| [i.name, i.id] }, :selected => current_component.id), :class => "pull-right", :prompt => "Product Quick Access" %>
            <a href="" onclick="$(this).closest('form').submit(); $('#spiner').toggle();" class="btn btn-mini">
              <%= image_tag '/assets/ajax-loader.gif', :id => 'spiner', :class => 'hide' %>
              <%= I18n.t('execute_estimation') %>
            </a>
          </div>
        </div>
        <div class="widget-content">
          <div class="input_data">
            <%=raw display_input.blank? ? "#{ content_tag(:div, I18n.t(:no_estimation_plan), :class => "alert alert-info")}" : display_input  %>
          </div>
        </div>
      </div>
    </div>

    <div class="span6">
      <div class="widget-box">
        <div class="widget-title"><span class="icon"><i class="icon-list"></i></span>
          <h5>Estimation module - Output data </h5>
          <div class="buttons">
            <a href="" class="btn btn-mini btn-warning">
              JSON
            </a>
            <a href="" class="btn btn-mini btn-warning">
              XML
            </a>
            <a href="" class="btn btn-mini btn-warning">
              CSV
            </a>
            <a href="#tab1" class="btn btn-mini btn-danger" data-toggle="tab">
              Tables
            </a>
            <a href="#tab2" class="btn btn-mini btn-danger" data-toggle="tab">
              Charts
            </a>
          </div>
        </div>

        <div class="widget-content tab-content">
          <div id="tab1" class="tab-pane active">
            <div class="output_data">
              <%=raw display_results.blank? ? "#{ content_tag(:div, "No results has been save up in the project's database", :class => "alert alert-info")}" : display_results  %>
            </div>
          </div>
          <div id="tab2" class="tab-pane">
            My cool charts !
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="widget-box">
      <div class="widget-title"><span class="icon"><i class="icon-signal"></i></span>
        <h5>Estimation Plan</h5>
        <div class="buttons">
          <a href="<%= edit_project_path(current_project.id, :anchor => "tabs-4") %>" class="btn btn-mini btn-info">
            Edit estimation plan
          </a>
        </div>
      </div>
      <div class="widget-content">
        <%= render 'projects/estimation_plan' %>
      </div>
    </div>
  </div>
</div>




