  <table border="0" width="100%">
    <tr>
      <td><h2>Users</h2></td>
      <td style="text-align:right;">
          <%= link_to 'Create a new user', new_user_path, :class => "btn" %>
      </td>
    </tr>
  </table>

  <table id="users" class="display table table-striped table-bordered" data-source="<%= users_url(format: "json") %>">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Surename</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Time Zone</th>
        <th>Language</th>
        <th>Authentication</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
      <tbody>
      </tbody>
      <tfoot>
       <tr>
       </tr>
      </tfoot>    
  </table>
  
<table border="0" width="100%">
  <tr>
    <td>
      <% User.all.each do |user| %>
        <%= pop_up("find_use_user_#{user.id}", "#{user}'s relationships") do -%>
          <%=raw build_find_use_user_popup(user.id) %>
        <% end %>
      <% end %>
    </td>
    <td style="text-align:right;">
      <%= link_to 'Create a new user', new_user_path, :class => "btn" %>
    </td>
  </tr>
</table>