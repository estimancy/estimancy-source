<% if current_project %>
  <div class="buttons">
    <%= select_tag 'pbs_list', options_for_select(current_project.root_component.subtree.map { |i| [i.name, i.id] }, :selected => current_component.id), :class => 'pull-right', :prompt => 'Product Quick Access' %>
    <% if can? :execute_estimation_plan, current_project %>
      <% if current_module_project %>
        <% unless current_component.folder? %>
          <% if current_module_project.pemodule.alias == "uow" %>
            <%= submit_tag 'Actualiser', :class => 'btn btn-mini', :title => I18n.t(:tooltip_run_estimation), :id => 'run_estimation', :remote => true %>
          <% else %>
            <%= submit_tag 'Run estimation', :class => 'btn btn-mini', :title => I18n.t(:tooltip_run_estimation), :id => 'run_estimation', :remote => true %>
          <% end %>
        <% else %>
          <%= submit_tag 'Run estimation', :class => 'btn btn-mini', :title => I18n.t(:tooltip_run_estimation), :id => 'run_estimation', :remote => true %>
        <% end %>
      <% end %>
    <% end %>
    <a href="<%= show_estimation_graph_path %>" class="btn btn-mini" title="Estimation graph" data-remote="true"  id="see_estimation_graph">
      <%= I18n.t :display_charts %>
    </a>
  </div>
<% end %>