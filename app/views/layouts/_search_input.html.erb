<%= form_tag "/searches/results", :class => "simple_form navbar-search pull-right", :id => "search_form" do %>
    <div class="input-prepend">
      <div class="input-append">
        <%= search_field_tag "search", "", :placeholder => I18n.t(:quick_search), :class => "search-input span5" %>
        <div class="btn-group">
            <button class="btn dropdown-toggle" data-toggle="dropdown" type="commit"><%= I18n.t(:search_action) %>
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><a href="#" onclick="$('#search_form').submit();"><%= I18n.t(:search_any_words) %></a></li>
              <li><a href="#" onclick="$('#search_form').submit();"><%= I18n.t(:search_any_words) %>></a></li>
              <li><a href="#" onclick="$('#search_form').submit();"><%= I18n.t(:search_phrase) %> %></a></li>
              <li><a href="#" onclick="$('#search_form').submit();"><%= I18n.t(:search_query) %></a></li>

              <%#= link_to I18n.t(:search_any_words), "#", {:search_action => "search_all_words"}, :onclick => "$('#search_form').submit();" %>
            </ul>
        </div>
      </div>
    </div>
<% end %>
