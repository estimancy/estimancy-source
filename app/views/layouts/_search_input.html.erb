<%= form_tag '/searches/results', :class => 'simple_form navbar-search pull-right', :id => 'search_form' do %>
    <div class="input-prepend" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
      <div class="input-append">
        <%= search_field_tag 'search', '', :placeholder => I18n.t(:quick_search), :class => 'search-input span5' %>
        <div class="btn-group">
          <button class="btn" tabindex="-1"><%= I18n.t(:search_action) %></button>
          7
          <button class="btn dropdown-toggle" data-toggle="dropdown" tabindex="-1">
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><a id="search_all_words" class="search_option_class" data-search_option_link="search_all_words" href="#" onclick="submit_search_form()"><%= I18n.t(:search_all_words) %></a></li>
            <li><a id="search_any_words" class="search_option_class" data-search_option_link="search_any_words" href="#" onclick="submit_search_form()"><%= I18n.t(:search_any_words) %></a></li>
            <li><a id="search_phrase" class="search_option_class" data-search_option_link="search_phrase" href="#" onclick="submit_search_form()"><%= I18n.t(:search_phrase) %></a></li>
            <li><a id="search_query" class="search_option_class" data-search_option_link="search_query" href="#" onclick="submit_search_form()"><%= I18n.t(:search_query) %></a></li>

          </ul>
        </div>
      </div>
    </div>
<% end %>
