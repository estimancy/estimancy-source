<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
<head>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title><%= @page_title ? @page_title : controller.action_name %></title>

  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application', 'projestimate_script', 'warn_text','jquery.tablesorter', 'jquery.tablesorter.widgets.js' %>

  <%= javascript_heads %>
  <%= csrf_meta_tag %>
  <script type="text/javascript" src="https://www.google.com/jsapi"></script>

</head>
<body>
    <%= render 'layouts/component_popup' %>

    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <div class="row">
            <div class="pull-left">
              <%= link_to(content_tag(:div, '', :class=> 'logoEstimate'), '/dashboard') %>
            </div>

            <div style="margin-top:16px;">
              <%= render 'layouts/search_input' %>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
            <%= render 'layouts/user_account' %>
            <div id="notifications">
              <%= render 'layouts/notifications' %>
            </div>

        </div>
      </div>
    </div>

    <div class="the-sidebar">
      <div class="well sidebar-nav">
        <%= render 'layouts/sidebar_menu' %>
      </div>
    </div>

    <div id="content">
      <div class="container-fluid the-container">
        <div class="row-fluid">
          <div class="span12">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>




</body>
</html>
