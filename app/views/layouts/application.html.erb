  <!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
<head>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title><%= @page_title ? @page_title : controller.action_name %></title>

  <%= stylesheet_link_tag 'application' %>
  <%#= javascript_include_tag 'application', 'chartkick', 'projestimate_script', '', '' %>  <!-- This line is replaced with de 2 lines to solve chart loading problems -->

  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
  <%= javascript_include_tag 'application', 'projestimate_script', '', '' %>

  <% if @online_support == "1" %>
    <script type="text/javascript" src="http://www.spark-angels.com/panserver3/multiwidget/spk_multiwidget.js"></script>
  <% end %>

  <%= csrf_meta_tag %>
</head>
<body>

<%= render 'layouts/modal' %>

  <div class="nav navbar">
    <div class="navbar-inner">
      <div class="container">
        <div class="pull-left">
          <a target="_blank" href="http://www.estimancy.com"><%= image_tag("/assets/Logo 200x75.png") %></a>
        </div>

        <div class="pull-right" style="margin-top:16px; margin-left: 10px">
          <%= render 'layouts/search_input' %>
        </div>

        <div class="pull-right" style="margin-top:16px; margin-left: 10px">
          <% if defined?(current_user)  %>
            <%= render 'layouts/send_feedback', :handlers => [:erb], :formats => [:html] %>
          <% end %>
        </div>

        <!--Support with Sparkom-->
        <div class="pull-right" style="margin-top:16px; margin-left: 10px">
          <%= render 'layouts/sparkom_support' %>
        </div>

      </div>
    </div>
  </div>

  <div class="nav navbar">
    <div class="navbar-inner">
      <div class="container">
        <% if user_signed_in? %>
          <%= render 'layouts/user_account' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container-fluid" style="margin-top: 8px; padding-right: 15px; padding-left: 15px;">
    <div class="row-fluid">
      <div class="span12">
        <%= yield %>
      </div>
    </div>
  </div>

<%= render 'cookies_eu/consent_banner' %>

</body>
</html>

<%= render 'layouts/notifications' %>
