<section class="card card-content-bloc estimancy-form">
  <div class="mb-5">
    <div class="effort-bloc">
      <div class="edition-bloc-title">
        <ul>
          <li><h4><a href="#tabs-1"><%= I18n.t(:currencies) %> </a></h4></li>
        </ul>
      </div>

      <div id="tabs-1">
        <div class="edition-bloc-content">
          <div class="edition-bloc-form">
            <%= simple_form_for(@currency) do |f| %>
                <%= f.error_notification %>

              <div class="form-row">
                <div class="col-7">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :name, :label => false, :input_html => {:class => 'mdl-textfield__input form-control', :autofocus => (controller.action_name == 'new')}  %>
                    <label class="mdl-textfield__label" for="name"><%= I18n.t(:name) %></label>
                  </div>
                </div>
              </div>

              <div class="form-row">
                <div class="col-7">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :alias, :label => false, :input_html => {:class => 'mdl-textfield__input form-control'} %>
                    <label class="mdl-textfield__label" for="alias"><%= I18n.t(:alias) %></label>
                  </div>
                </div>
              </div>

              <div class="form-row">
                <div class="col-7">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :description, :label => false, :input_html => {:class => 'mdl-textfield__input form-control', :rows => 5 }  %>
                    <label class="mdl-textfield__label" for="description"><%= I18n.t(:description) %></label>
                  </div>
                </div>
              </div>


              <div class="form-row">
                <div class="col-7">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :iso_code, :label => false, :input_html => {:class => 'mdl-textfield__input form-control'} %>
                    <label class="mdl-textfield__label" for="iso_code"><%= I18n.t(:iso_code) %></label>
                  </div>
                </div>
              </div>

              <div class="form-row">
                <div class="col-7">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :iso_code_number, :label => false, :input_html => {:class => 'mdl-textfield__input form-control'} %>
                    <label class="mdl-textfield__label" for="iso_code_number"><%= I18n.t(:iso_code_number) %></label>
                  </div>
                </div>
              </div>

              <div class="form-row">
                <div class="col-7">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :sign, :label => false, :input_html => {:class => 'mdl-textfield__input form-control'} %>
                    <label class="mdl-textfield__label" for="sign"><%= I18n.t(:currency_sign) %></label>
                  </div>
                </div>
              </div>

              <div class="form-row">
                <div class="col-7">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <%= f.input :conversion_rate, :label => false, :input_html => {:class => 'mdl-textfield__input form-control'} %>
                    <label class="mdl-textfield__label" for="conversion_rate"><%= I18n.t(:conversion_rate) %></label>
                  </div>
                </div>
              </div>

              <div class="form-row">
                <div class="col-7">
                  <div class="actions-tabs">
                    <%= f.submit I18n.t('save'), :class => 'btn btn-primary' %>
                    <%= f.submit I18n.t('apply'), :class => 'btn btn-primary' %>
                  </div>
                </div>
              </div>

            <% end %>
          </div>
        </div>
      </div>


    </div>
  </div>
</section>
