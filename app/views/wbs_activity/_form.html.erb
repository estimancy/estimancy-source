<%= simple_form_for(@wbs_activity) do |f| %>
    <%= f.error_notification %>

    <%= f.input :name, :input_html => { :class => 'input-xxlarge' } %>
    <%= f.input :description, :input_html => { :class => 'input-xxlarge' } %>
    <%= f.input :organization_id, :as => :select, :collection => Organization.all, :input_html => { :class => 'input-xxlarge' } %>
    <%= f.input :state, :input_html => { :class => 'input-xxlarge' } %>
<% end %>
