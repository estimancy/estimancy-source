<div class="span12">
  <h1>Listing icons</h1>

  <table class="table table-striped">
    <tr>
      <th>Name</th>
      <th>Icon</th>
      <th colspan="2">Actions</th>
    </tr>
    <% @icons.each do |i| %>
      <tr>
        <td><%= i.name %></td>
        <td><%= image_tag i.icon.url(:small) %></td>
        <td><%= link_to 'Edit', edit_peicon_path(i) %></td>
        <td><%= link_to 'Destroy', i, confirm: 'Are you sure?', method: :delete %></td>
        <% if i.is_proposed? %>
            <td><%= link_to('Validate', "peicons/#{i.id}/validate_change", confirm: 'Do you confirm changes validation on this record?', :title => "validate changes")%></td>
        <% end %>
      </tr>
    <% end %>
  </table>

  <%= link_to "Add an icon", new_peicon_path %>

</div>
