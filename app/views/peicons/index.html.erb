<div class="span12">
  <h1><%= I18n.t(:icons) %></h1>

  <table class="table table-striped table-bordered table-condensed">
    <tr>
      <th><%= I18n.t(:name) %></th>
      <th><%= I18n.t(:icon) %></th>
      <th><%= I18n.t(:record_status) %></th>
      <th colspan="3"><%= I18n.t(:actions) %></th>
    </tr>
    <% @icons.each do |i| %>
      <tr>
        <td><%= i.name %></td>
        <td><%= image_tag i.icon.url(:small) %></td>
        <td><%= i.record_status.name unless i.record_status.nil? %> <%= i.show_custom_value %></td>
        <td><%= link_to '', edit_peicon_path(i), :class => 'icn_edit', :title => I18n.t('edit') %></td>
        <td><%= link_to '', i, confirm: I18n.t('are_you_sur'), method: :delete, :class => 'icn_trash', :title =>I18n.t('delete') %></td>
        <td>
          <% if is_master_instance? && !i.is_local_record? %>
              <% if i.is_retired? %>
                  <%= link_to(I18n.t('restore'), "peicons/#{i.id}/restore_change", confirm: I18n.t('restoring'), :title => I18n.t('restore_title'))%>
              <% else %>
                  <% unless i.is_defined? %>
                      <%= link_to(I18n.t('validate'), "peicons/#{i.id}/validate_change", confirm: I18n.t('validation'), :title => I18n.t('validate_title'))%>
                  <% end %>
              <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <%= link_to I18n.t('new_icon'), new_peicon_path, :class => 'btn' %>

</div>
