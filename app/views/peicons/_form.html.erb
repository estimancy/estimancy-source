<%= simple_form_for(@icon, :multipart => true) do |f| %>
  <%= f.input :name %>
  <%= f.input :icon, :as => :file %>
  <h4> The file size must be between 0 and 10 kilobytes. It will be automatically cropped to 16x16 pixels.</h4>
  <div class="actions">
    <%= f.submit "Save", :class => "btn btn-success" %>
    <%= f.submit "Apply", :class => "btn btn-success" %>
  </div>
<% end %>