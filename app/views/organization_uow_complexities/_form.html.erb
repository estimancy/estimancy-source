<div class="tabs">
  <ul>
    <li><a href="#tabs-1"><%= I18n.t(:text_organization_uow_complexity) %> </a></li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@organization_uow_complexity) do |f| %>
        <%= f.input :organization_id, :as => :hidden, :input_html => { :class => 'input-xxlarge', :value => @oragnization.id || params[:organization_id] } %>
        <%= f.input :name, :input_html => {:class => 'input-xxlarge', :autofocus => (controller.action_name == 'new')} %>
        <%= f.input :description, :input_html => {:class => 'input-xxlarge', :rows => 5} %>

      <div class="actions-tabs">
        <% if action_name == 'new' || action_name=="create" %>
            <%= submit_tag I18n.t('save_and_create'), :class => 'btn' %>
            <%= submit_tag I18n.t('save'), :class => 'btn' %>
        <% elsif action_name == 'edit' || action_name=="update" %>
            <%= submit_tag I18n.t('save'), :class => 'btn' %>
            <%= submit_tag I18n.t('apply'), :class => 'btn' %>
        <% end %>

        <%= link_to I18n.t('back'), edit_organization_path(@organization || params[:organization_id], :anchor=>'tabs-5'), :class => 'btn' %>
      </div>

    <% end %>
  </div>
</div>