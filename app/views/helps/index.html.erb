<h1>Liste du contenu d'aide </h1>

<table class="tablesorter">
  <tr>
    <th>Contenu</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @helps.reject{|k| k.help_type.name == "faq" }.each do |help| %>
  <tr>
    <td><%=raw help.content %></td>
    <td><%= help.help_type.name.capitalize %></td>
    <td><%= link_to 'Voir', help %></td>
    <td><%= link_to 'Editer', edit_help_path(help) %></td>
    <td><%= link_to 'Supprimer', help, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

