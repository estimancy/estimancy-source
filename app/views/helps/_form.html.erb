<% if @help.help_type.name=="tooltip" %>
  <% help_type = '' %>
<% else %>
  <% help_type = 'display:none;' %>
<% end %>

<%= form_for(@help) do |f| %>
  <% if @help.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@help.errors.count, "error") %> prohibited this help from being saved:</h2>

      <ul>
      <% @help.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div >
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => "editor" %>
  </div>
  <div id="div_help_help_code"  style="<%= help_type %>">
    <%= f.label :help_code %><br />
    <%= f.text_field :help_code %>
  </div>
  <div class="actions">
    <%= f.submit "Save", :class => "btn btn-success" %>
    <%= f.submit "Apply", :class => "btn btn-success" %>
  </div>
<% end %>
