<%= simple_form_for(@work_element_type) do |f| %>

  <h1><%= controller.controller_name.humanize.singularize %> </h1>

  <div >
    <%= f.input :name %>

    <%= f.input :alias %>

    <%= f.input :description %>

    <p>
      <div class="my_peicon">
        <% if @work_element_type.peicon%>
          <%= image_tag @work_element_type.peicon.icon.url %>
        <% else %>
            None
        <% end %>
      </div>
      <%= link_to "Change icon", "#change_peicon", :"data-toggle" => "modal" %>
    </p>

    <%= f.input :peicon_id, :as => :hidden %>

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div id="change_peicon" class=" modal hide fade">
  <div class="modal-body">
    <% @peicons.each do |i| %>
      <%= link_to image_tag(i.icon.url), choose_icon_path(i), :remote => true %>
    <% end %>
  </div>
</div>
